{
  "osteoarthritis": {
    "diagnosticAlgorithm": {
      "title": "骨關節炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估慢性進行性跛行、僵硬（尤其休息後）、活動量下降，詢問品種及年齡",
          "findings": ["慢性進行性跛行", "休息後僵硬（起立困難）", "活動量及遊戲意願下降", "行為改變（攻擊性增加、不願被觸碰）"]
        },
        {
          "step": 2,
          "action": "骨科檢查",
          "details": "系統性評估所有關節的活動範圍、疼痛、腫脹、捻發音",
          "findings": ["關節活動範圍受限", "關節操作時疼痛", "關節腫脹及骨贅增生", "捻發音（關節磨擦感）"]
        },
        {
          "step": 3,
          "action": "影像學確診",
          "details": "受累關節X光確認退化性變化",
          "findings": ["骨贅形成", "關節間隙狹窄", "軟骨下骨硬化", "關節積液"]
        },
        {
          "step": 4,
          "action": "排除繼發原因",
          "details": "評估是否有原發性關節疾病導致繼發性OA，關節液分析排除其他關節炎",
          "findings": ["前十字韌帶疾病繼發", "髖關節發育不良繼發", "髕骨脫位繼發", "原發性退化性關節炎"]
        }
      ]
    }
  },
  "mast-cell-tumor": {
    "diagnosticAlgorithm": {
      "title": "肥大細胞瘤 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觸診皮膚或皮下腫塊，注意Darier sign（觸摸後腫塊周圍紅腫），注意好發品種",
          "findings": ["皮膚單一或多發腫塊", "觸摸後腫塊紅腫（Darier sign）", "大小變化不定", "好發品種（拳師犬、拉布拉多、金毛）"]
        },
        {
          "step": 2,
          "action": "細針抽吸細胞學",
          "details": "FNA細胞學檢查確認肥大細胞特徵（紫色顆粒）",
          "findings": ["圓形細胞含紫色嗜鉻性顆粒", "細胞學可快速確認MCT", "顆粒多寡評估分化程度", "嗜酸性球可能伴隨"]
        },
        {
          "step": 3,
          "action": "分期檢查",
          "details": "局部淋巴結FNA、腹部超音波（肝脾）、血液學檢查",
          "findings": ["局部淋巴結轉移評估", "肝脾超音波及FNA", "外周血嗜酸性球增多", "buffy coat肥大細胞評估"]
        },
        {
          "step": 4,
          "action": "手術切除與分級",
          "details": "廣泛切除（2-3cm邊界）送病理分級（Patnaik或Kiupel系統）",
          "findings": ["Kiupel分級（低級或高級）", "切除邊界評估（乾淨或不乾淨）", "c-KIT突變檢測", "Ki-67增殖指數"]
        }
      ]
    }
  },
  "hemangiosarcoma": {
    "diagnosticAlgorithm": {
      "title": "血管肉瘤 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估急性虛弱崩潰（脾臟破裂出血），注意好發品種（德牧、黃金獵犬）",
          "findings": ["急性虛弱或崩潰", "黏膜蒼白（內出血）", "腹部膨脹", "皮膚結節（皮膚型）"]
        },
        {
          "step": 2,
          "action": "急診評估",
          "details": "FAST超音波確認腹腔積液，PCV/TP評估貧血",
          "findings": ["腹腔積液（血性）", "PCV下降", "脾臟腫塊", "心包積液（心臟型）"]
        },
        {
          "step": 3,
          "action": "影像與實驗室",
          "details": "胸腹部X光及超音波評估轉移，凝血功能評估",
          "findings": ["脾臟腫塊（超音波）", "肝臟轉移結節", "肺部轉移（X光）", "DIC跡象"]
        },
        {
          "step": 4,
          "action": "手術與病理確診",
          "details": "緊急脾臟切除（穩定化後），病理確診腫瘤類型",
          "findings": ["血管肉瘤病理確認", "分期（I-III）", "肝臟及右心房評估", "化療方案規劃（doxorubicin-based）"]
        }
      ]
    }
  },
  "mammary-tumor": {
    "diagnosticAlgorithm": {
      "title": "乳腺腫瘤 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觸診所有乳腺鏈（犬5對、貓4對），記錄腫塊位置、大小、數量",
          "findings": ["乳腺腫塊（單一或多發）", "後段乳腺好發（犬）", "腫塊固定或可移動", "可能有潰瘍或分泌物"]
        },
        {
          "step": 2,
          "action": "理學檢查與FNA",
          "details": "區域淋巴結觸診，FNA細胞學初步判斷良惡性",
          "findings": ["腹股溝或腋下淋巴結腫大", "FNA見上皮細胞特徵", "良性vs惡性初步判斷", "犬50%良性/貓85%惡性"]
        },
        {
          "step": 3,
          "action": "分期檢查",
          "details": "三段式胸部X光排除肺轉移、腹部超音波評估區域淋巴結",
          "findings": ["胸部X光排除肺轉移", "腹部超音波淋巴結評估", "基礎血液檢查", "評估是否適合手術"]
        },
        {
          "step": 4,
          "action": "手術切除與病理分級",
          "details": "手術切除（腫瘤切除至乳腺鏈切除不等），病理分型及分級",
          "findings": ["腫瘤組織學類型確認", "惡性程度分級", "淋巴管侵犯評估", "切除邊界評估"]
        }
      ]
    }
  },
  "feline-infectious-peritonitis": {
    "diagnosticAlgorithm": {
      "title": "貓傳染性腹膜炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估年輕貓的持續性發熱、體重下降，區分濕型（積液）和乾型（肉芽腫）",
          "findings": ["持續性不退燒", "體重下降、食慾不振", "腹部膨脹（濕型）", "眼部或神經症狀（乾型）"]
        },
        {
          "step": 2,
          "action": "實驗室檢查",
          "details": "CBC、生化（白球蛋白比）、急性期蛋白、冠狀病毒抗體效價",
          "findings": ["高球蛋白血症", "白球蛋白比<0.6", "淋巴球減少", "非再生性貧血"]
        },
        {
          "step": 3,
          "action": "積液分析（濕型）",
          "details": "腹腔或胸腔積液分析，特徵為高蛋白低細胞數滲出液",
          "findings": ["蛋白>3.5g/dL", "黃色黏稠液體", "Rivalta試驗陽性", "細胞數偏低（以巨噬細胞為主）"]
        },
        {
          "step": 4,
          "action": "確診檢查",
          "details": "積液或組織的冠狀病毒RT-PCR、免疫組織化學染色",
          "findings": ["積液FCoV RT-PCR陽性", "組織免疫組織化學確認冠狀病毒抗原", "肉芽腫性血管炎（病理特徵）", "綜合臨床證據確診"]
        }
      ]
    }
  },
  "feline-leukemia-virus": {
    "diagnosticAlgorithm": {
      "title": "貓白血病病毒感染 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估反覆感染、體重下降、貧血、淋巴瘤等FeLV相關疾病",
          "findings": ["反覆感染或慢性口炎", "體重下降", "貧血（黏膜蒼白）", "淋巴結腫大"]
        },
        {
          "step": 2,
          "action": "篩檢測試",
          "details": "ELISA快速篩檢（偵測p27抗原），適用於臨床篩檢",
          "findings": ["ELISA p27陽性（血液中病毒抗原）", "ELISA陰性（需考慮時機及再測）", "所有新貓應篩檢", "陽性結果需確認"]
        },
        {
          "step": 3,
          "action": "確認試驗",
          "details": "IFA或PCR確認ELISA陽性結果，區分暫時性和持續性感染",
          "findings": ["IFA陽性（骨髓感染，持續性病毒血症）", "PCR確認前病毒DNA整合", "ELISA陽性+IFA陽性=持續性感染", "ELISA陽性+IFA陰性=可能暫時性（30天後複查）"]
        },
        {
          "step": 4,
          "action": "感染分期與管理",
          "details": "確認感染狀態後評估相關疾病及預後",
          "findings": ["持續性病毒血症（預後較差）", "回歸性感染（潛伏）", "相關疾病篩檢（淋巴瘤、貧血）", "隔離管理防止傳播"]
        }
      ]
    }
  },
  "feline-immunodeficiency-virus": {
    "diagnosticAlgorithm": {
      "title": "貓免疫缺陷病毒感染 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估慢性感染、口腔疾病、體重下降，注意高風險群（未絕育公貓、流浪貓）",
          "findings": ["慢性口炎/齒齦炎", "反覆上呼吸道感染", "慢性腹瀉", "體重下降"]
        },
        {
          "step": 2,
          "action": "篩檢測試",
          "details": "ELISA/快速免疫層析法偵測抗FIV抗體",
          "findings": ["抗FIV抗體陽性", "注意疫苗接種史（疫苗可致假陽性）", "幼貓<6月齡可能有母體抗體", "高風險群建議篩檢"]
        },
        {
          "step": 3,
          "action": "確認試驗",
          "details": "Western blot或PCR確認篩檢陽性結果",
          "findings": ["Western blot確認抗體", "PCR偵測前病毒DNA", "區分疫苗抗體vs感染抗體", "幼貓>6月齡後複查"]
        },
        {
          "step": 4,
          "action": "感染分期與監測",
          "details": "評估免疫功能（CD4:CD8比值）、相關疾病篩檢",
          "findings": ["CD4+ T細胞計數", "基礎疾病評估", "口腔疾病管理", "室內飼養防止傳播"]
        }
      ]
    }
  },
  "canine-distemper": {
    "diagnosticAlgorithm": {
      "title": "犬瘟熱 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估多系統症狀（呼吸道、消化道、神經），詢問疫苗史及接觸史",
          "findings": ["雙相性發熱", "眼鼻膿性分泌物", "咳嗽及肺炎", "嘔吐及腹瀉"]
        },
        {
          "step": 2,
          "action": "神經學評估",
          "details": "評估神經症狀（可與呼吸道/消化道症狀同時或延遲出現）",
          "findings": ["肌陣攣（咀嚼肌或四肢抽搐）", "癲癇發作", "共濟失調", "足墊增厚（硬墊症）"]
        },
        {
          "step": 3,
          "action": "實驗室診斷",
          "details": "CDV RT-PCR（結膜拭子、血液、尿液）、包涵體尋找",
          "findings": ["RT-PCR陽性（確診）", "結膜或呼吸道上皮細胞包涵體", "淋巴球減少", "CSF分析（神經型）"]
        },
        {
          "step": 4,
          "action": "確診與預後",
          "details": "結合臨床表現及實驗室結果確診，評估預後",
          "findings": ["CDV確診", "神經症狀者預後差", "肌陣攣通常為永久性", "與疫苗相關腦炎鑑別"]
        }
      ]
    }
  },
  "keratoconjunctivitis-sicca": {
    "diagnosticAlgorithm": {
      "title": "乾性角結膜炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察眼部黏稠分泌物、角膜混濁、眼睛不適，注意好發品種（西施犬、鬥牛犬、可卡犬）",
          "findings": ["黏稠黃綠色眼分泌物", "角膜混濁或新生血管", "眨眼頻繁", "結膜充血"]
        },
        {
          "step": 2,
          "action": "淚液測試（STT）",
          "details": "Schirmer淚液測試為確診金標準，正常值犬>15mm/min",
          "findings": ["STT<10mm/min（KCS確診）", "STT 10-15mm/min（可疑）", "STT>15mm/min（正常）", "雙眼比較"]
        },
        {
          "step": 3,
          "action": "眼科全面評估",
          "details": "螢光素染色評估角膜損傷、裂隙燈評估角膜狀態、眼壓測量",
          "findings": ["角膜潰瘍（螢光素陽性）", "角膜色素沉著", "角膜新生血管", "角膜脂質沉積"]
        },
        {
          "step": 4,
          "action": "病因評估",
          "details": "區分免疫媒介性（最常見）、藥物性、神經性、先天性原因",
          "findings": ["免疫媒介性（最常見，淚腺淋巴細胞浸潤）", "藥物性（磺胺類藥物）", "神經性（面神經或三叉神經異常）", "先天性（淚腺發育不全）"]
        }
      ]
    }
  },
  "corneal-ulcer": {
    "diagnosticAlgorithm": {
      "title": "角膜潰瘍 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估眼部急性疼痛（瞇眼、流淚、畏光），詢問外傷或異物暴露史",
          "findings": ["急性瞇眼及流淚", "畏光", "結膜充血", "角膜混濁"]
        },
        {
          "step": 2,
          "action": "螢光素染色（確診）",
          "details": "螢光素染色評估潰瘍範圍、深度及特徵",
          "findings": ["螢光素染色陽性（上皮缺損）", "評估潰瘍深度（淺層/深層/角膜穿孔）", "邊緣特徵（游離上皮＝SCCED）", "樹突狀潰瘍（貓FHV-1）"]
        },
        {
          "step": 3,
          "action": "進階評估",
          "details": "裂隙燈評估基質溶解程度，STT排除乾眼症，細胞學/培養（複雜潰瘍）",
          "findings": ["基質溶解（膠原酶活性）", "前房反應（前葡萄膜炎）", "角膜穿孔（前房塌陷）", "感染性評估（膿性分泌物）"]
        },
        {
          "step": 4,
          "action": "潰瘍分型與治療決策",
          "details": "根據深度、原因及特徵分型，決定藥物或手術治療",
          "findings": ["淺層單純潰瘍（藥物治療）", "SCCED/拳師犬潰瘍（清創+格子切開）", "深層溶解性潰瘍（結膜瓣或角膜移植）", "穿孔性潰瘍（緊急手術）"]
        }
      ]
    }
  }
}
