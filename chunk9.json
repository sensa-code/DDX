{
  "insulinoma-cat": {
    "diagnosticAlgorithm": {
      "title": "貓胰島素瘤 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估低血糖相關的神經症狀（虛弱、震顫、癲癇），注意症狀與進食關係",
          "findings": ["間歇性虛弱或塌陷", "肌肉震顫或痙攣", "癲癇發作", "症狀在禁食後出現"]
        },
        {
          "step": 2,
          "action": "血糖與胰島素配對檢測",
          "details": "禁食後同時測定血糖及胰島素濃度，Amended Insulin:Glucose Ratio",
          "findings": ["低血糖（<60mg/dL）", "胰島素濃度不適當升高", "AIGR升高", "排除其他低血糖原因"]
        },
        {
          "step": 3,
          "action": "影像學定位",
          "details": "腹部超音波尋找胰臟腫塊，CT增強掃描評估",
          "findings": ["胰臟小結節（超音波可能難以偵測）", "CT增強可見胰臟強化結節", "評估肝臟轉移", "局部淋巴結評估"]
        },
        {
          "step": 4,
          "action": "確診與分期",
          "details": "手術探查及病理確診，術中胰臟仔細觸診尋找結節",
          "findings": ["胰臟β細胞腫瘤（病理確認）", "良性vs惡性評估", "肝轉移評估", "術後血糖監測"]
        }
      ]
    }
  },
  "aldosteronoma": {
    "diagnosticAlgorithm": {
      "title": "原發性高醛固酮症 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估低鉀血症相關症狀（肌肉無力、頸部腹屈），注意貓較犬常見",
          "findings": ["肌肉無力（低鉀血症）", "頸部腹屈（貓特徵性表現）", "多飲多尿", "高血壓"]
        },
        {
          "step": 2,
          "action": "實驗室檢查",
          "details": "血液生化確認低鉀血症和高鈉血症，測量血壓",
          "findings": ["持續性低鉀血症", "高鈉血症", "系統性高血壓", "CK升高（低鉀性肌病）"]
        },
        {
          "step": 3,
          "action": "醛固酮與腎上腺影像",
          "details": "血漿醛固酮濃度測定，腹部超音波或CT評估腎上腺",
          "findings": ["血漿醛固酮升高", "腎上腺腫塊（單側）", "腎素活性抑制", "CT可更精確評估腫瘤範圍"]
        },
        {
          "step": 4,
          "action": "確診與治療規劃",
          "details": "結合低鉀、高醛固酮及腎上腺腫塊確診，評估手術可行性",
          "findings": ["腎上腺皮質腺瘤或腺癌", "對側腎上腺評估", "血管侵犯評估", "手術切除vs藥物管理"]
        }
      ]
    }
  },
  "acromegaly": {
    "diagnosticAlgorithm": {
      "title": "肢端肥大症 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估糖尿病貓對胰島素抵抗（需大劑量胰島素）、體型增大",
          "findings": ["胰島素抵抗性糖尿病", "體重增加（非減少）", "面部及四肢增大", "下顎突出（下顎前突症）"]
        },
        {
          "step": 2,
          "action": "實驗室評估",
          "details": "血清IGF-1（胰島素樣生長因子1）測定，血糖及果糖胺監測",
          "findings": ["IGF-1顯著升高", "血糖控制差（即使高劑量胰島素）", "果糖胺持續升高", "蛋白尿（腎絲球病變）"]
        },
        {
          "step": 3,
          "action": "腦部影像",
          "details": "MRI或CT評估腦下垂體腫瘤",
          "findings": ["腦下垂體腫大", "垂體巨腺瘤", "視交叉壓迫評估", "腫瘤大小測量"]
        },
        {
          "step": 4,
          "action": "確診與治療選擇",
          "details": "IGF-1升高加垂體腫瘤確診，評估放療或藥物治療",
          "findings": ["肢端肥大症確診", "放射治療評估", "藥物控制（pasireotide等）", "糖尿病管理調整"]
        }
      ]
    }
  },
  "thymic-lymphoma": {
    "diagnosticAlgorithm": {
      "title": "胸腺淋巴瘤 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估呼吸困難（胸腔佔位）、前腔靜脈症候群表現，注意年輕貓好發",
          "findings": ["呼吸困難（限制性）", "面部及前肢水腫（前腔靜脈壓迫）", "不可壓縮性前胸壁", "精神沉鬱"]
        },
        {
          "step": 2,
          "action": "影像學評估",
          "details": "胸部X光見前縱膈腫塊，可能伴有胸腔積液",
          "findings": ["前縱膈腫塊", "胸腔積液", "心影被遮蓋", "氣管背側偏移"]
        },
        {
          "step": 3,
          "action": "細胞學確診",
          "details": "胸腔積液細胞學及/或超音波引導下FNA取得腫塊細胞學樣本",
          "findings": ["大量淋巴母細胞", "胸腔積液為淋巴瘤相關", "免疫表型分析（T細胞為主）", "FeLV檢測（貓）"]
        },
        {
          "step": 4,
          "action": "分期與治療規劃",
          "details": "完整分期（CBC、生化、腹部超音波、骨髓穿刺），制定化療方案",
          "findings": ["WHO分期（I-V期）", "骨髓侵犯評估", "FeLV陽性（預後較差）", "化療反應評估"]
        }
      ]
    }
  },
  "splenic-torsion": {
    "diagnosticAlgorithm": {
      "title": "脾臟扭轉 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估急性或慢性腹痛、嘔吐，注意大型犬深胸犬種好發，可能伴隨GDV",
          "findings": ["急性腹痛及嘔吐", "腹部膨脹", "黏膜蒼白（脾臟淤血破裂風險）", "精神沉鬱"]
        },
        {
          "step": 2,
          "action": "影像學檢查",
          "details": "腹部超音波評估脾臟大小、回音性及血流，X光排除GDV",
          "findings": ["脾臟顯著腫大", "脾臟血管蒂扭轉（都卜勒無血流）", "脾臟實質回音異常", "可能有腹腔積液"]
        },
        {
          "step": 3,
          "action": "血液學評估",
          "details": "CBC（可能見溶血或血小板消耗）、凝血功能評估",
          "findings": ["貧血", "血小板減少", "Howell-Jolly小體", "凝血功能異常"]
        },
        {
          "step": 4,
          "action": "手術確診與治療",
          "details": "手術探查確認脾臟扭轉並行脾臟切除，術中評估脾臟組織存活度",
          "findings": ["脾臟血管蒂扭轉確認", "脾臟充血壞死", "脾臟切除", "病理排除潛在脾臟腫瘤"]
        }
      ]
    }
  },
  "ovarian-remnant-syndrome": {
    "diagnosticAlgorithm": {
      "title": "殘留卵巢症候群 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "已絕育母犬/母貓出現發情行為或陰道分泌物，詢問絕育手術史",
          "findings": ["已絕育動物出現發情行為", "吸引公犬/公貓", "陰道分泌物", "乳腺腫大"]
        },
        {
          "step": 2,
          "action": "陰道細胞學",
          "details": "陰道抹片評估是否有雌激素影響的角化上皮細胞",
          "findings": ["陰道上皮角化增加", "表淺角化細胞增多", "符合動情期細胞學變化", "陰道細胞學隨週期變化"]
        },
        {
          "step": 3,
          "action": "荷爾蒙檢查",
          "details": "測定雌二醇或黃體素濃度，GnRH或hCG刺激試驗",
          "findings": ["基礎雌二醇升高", "hCG刺激後黃體素升高", "AMH（抗穆勒氏管荷爾蒙）升高", "確認殘留功能性卵巢組織"]
        },
        {
          "step": 4,
          "action": "影像與手術確診",
          "details": "腹部超音波尋找殘留卵巢組織（可能很小），手術探查及切除",
          "findings": ["超音波見卵巢蒂附近組織", "發情期時較易偵測", "手術探查確認殘留組織", "病理確認含卵巢組織"]
        }
      ]
    }
  },
  "benign-prostatic-hyperplasia": {
    "diagnosticAlgorithm": {
      "title": "良性前列腺增生 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估未絕育公犬的排便困難、尿道分泌物、血尿",
          "findings": ["排便困難或便形改變", "尿道血性分泌物", "排尿困難", "未絕育中老年公犬"]
        },
        {
          "step": 2,
          "action": "直腸觸診",
          "details": "直腸觸診評估前列腺大小、對稱性、質地、疼痛度",
          "findings": ["前列腺對稱性增大", "質地均勻堅實", "觸診無疼痛", "中線溝仍可觸及"]
        },
        {
          "step": 3,
          "action": "影像學評估",
          "details": "腹部X光及超音波評估前列腺大小及內部結構",
          "findings": ["前列腺均勻增大", "超音波回音均質", "排除囊腫或膿腫", "排除前列腺腫瘤"]
        },
        {
          "step": 4,
          "action": "確診與治療",
          "details": "根據未絕育公犬前列腺對稱性增大臨床診斷，去勢為根治療法",
          "findings": ["良性前列腺增生確診", "去勢後2-4週前列腺縮小", "排除前列腺炎/膿腫/腫瘤", "藥物治療（finasteride或osaterone）"]
        }
      ]
    }
  },
  "testicular-tumor": {
    "diagnosticAlgorithm": {
      "title": "睪丸腫瘤 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觸診發現睪丸腫大（單側或雙側），詢問隱睪史，注意雌性化症狀",
          "findings": ["睪丸不對稱增大", "隱睪（腫瘤風險增高）", "對側睪丸萎縮", "雌性化症狀（脫毛、乳腺腫大）"]
        },
        {
          "step": 2,
          "action": "理學與皮膚檢查",
          "details": "評估雌激素過多症狀（對稱性脫毛、色素沉著、乳腺發育），腹部觸診隱睪",
          "findings": ["對稱性非搔癢性脫毛", "皮膚色素沉著", "乳腺發育（雄犬）", "包皮下垂"]
        },
        {
          "step": 3,
          "action": "超音波與血液學",
          "details": "睪丸超音波評估腫塊特徵，CBC排除骨髓抑制（雌激素過多）",
          "findings": ["超音波見睪丸實質內佔位", "腹腔超音波尋找隱睪腫瘤", "嚴重貧血或全血球減少（雌激素毒性）", "血小板減少"]
        },
        {
          "step": 4,
          "action": "手術切除與病理確診",
          "details": "雙側去勢手術切除，病理確認腫瘤類型",
          "findings": ["精原細胞瘤", "Sertoli細胞瘤（雌性化相關）", "間質細胞瘤（Leydig cell）", "混合型腫瘤"]
        }
      ]
    }
  },
  "anal-furunculosis": {
    "diagnosticAlgorithm": {
      "title": "肛周瘻管 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察肛周多發性瘻管及潰瘍，注意好發品種（德國牧羊犬最常見）",
          "findings": ["肛周多發性瘻管開口", "惡臭膿性分泌物", "排便疼痛或困難", "頻繁舔舐肛周"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "鎮靜下仔細檢查肛周區域，評估瘻管範圍及深度",
          "findings": ["多發性引流竇道", "肛周組織纖維化", "肛門括約肌受累", "可能有肛門狹窄"]
        },
        {
          "step": 3,
          "action": "病理排除",
          "details": "切片排除肛周腫瘤（腺癌、腺瘤），因外觀可能相似",
          "findings": ["化膿性肉芽腫炎症", "排除肛周腺癌", "排除肛囊腺癌", "免疫媒介性發炎機制"]
        },
        {
          "step": 4,
          "action": "確診與治療規劃",
          "details": "根據臨床表現及病理確認為肛周瘻管，規劃免疫抑制治療",
          "findings": ["肛周瘻管確診", "cyclosporine為首選治療", "tacrolimus局部使用", "手術切除（嚴重或藥物無效時）"]
        }
      ]
    }
  },
  "immune-mediated-polyarthritis-non-erosive": {
    "diagnosticAlgorithm": {
      "title": "非侵蝕性免疫媒介性多發性關節炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估多關節腫脹疼痛、移行性跛行、發熱、僵硬",
          "findings": ["多關節腫脹及疼痛", "移行性跛行", "發熱", "晨起僵硬"]
        },
        {
          "step": 2,
          "action": "關節液分析（確診必要）",
          "details": "多關節（至少3-4個）穿刺取關節液，送細胞學及培養",
          "findings": ["關節液細胞數增加（>5000/μL）", "嗜中性球為主（非退化性）", "細菌培養陰性", "黏度降低"]
        },
        {
          "step": 3,
          "action": "影像學評估",
          "details": "關節X光排除侵蝕性關節病變（類風濕關節炎）",
          "findings": ["軟組織腫脹", "關節腔積液", "無骨侵蝕（非侵蝕性特徵）", "無軟骨下骨破壞"]
        },
        {
          "step": 4,
          "action": "病因分型",
          "details": "排除感染性觸發因素（壁蝨媒介疾病）、腫瘤相關、藥物反應",
          "findings": ["特發性（Type I最常見）", "排除壁蝨媒介疾病", "排除潛在腫瘤", "排除藥物反應"]
        }
      ]
    }
  }
}
