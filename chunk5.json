{
  "metaldehyde-toxicosis": {
    "diagnosticAlgorithm": {
      "title": "聚乙醛中毒（蝸牛藥中毒）診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "確認蝸牛藥暴露史，評估神經肌肉症狀的嚴重度，注意發病極快（1-3小時）",
          "findings": ["暴露蝸牛藥後急性發病", "肌肉震顫及僵直", "全身性癲癇發作", "高體溫"]
        },
        {
          "step": 2,
          "action": "臨床評估",
          "details": "評估體溫（可能嚴重升高）、酸鹼狀態、肝功能",
          "findings": ["嚴重高體溫（>41°C）", "代謝性酸中毒", "心搏過速", "流涎及嘔吐"]
        },
        {
          "step": 3,
          "action": "實驗室檢查",
          "details": "血液生化評估器官損傷、血氣分析，必要時胃內容物或血液毒物分析",
          "findings": ["肝酵素升高（延遲性肝損傷）", "代謝性酸中毒", "乳酸升高", "肌酸激酶升高"]
        },
        {
          "step": 4,
          "action": "確診與支持治療",
          "details": "根據暴露史和特徵性臨床表現即可臨床診斷，毒物分析可確診但通常不等結果即開始治療",
          "findings": ["暴露史加典型症狀即可臨床診斷", "胃內容物毒物分析", "持續監測肝功能（48-72小時）", "評估DIC風險"]
        }
      ]
    }
  },
  "blue-green-algae-toxicosis": {
    "diagnosticAlgorithm": {
      "title": "藍綠藻中毒 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "詢問近期接觸藻類水源史，注意發病極快（肝毒素數小時、神經毒素數分鐘）",
          "findings": ["接觸藻類覆蓋水源後急性發病", "嘔吐、腹瀉（肝毒素型）", "急性癲癇或呼吸衰竭（神經毒素型）", "虛弱、崩潰"]
        },
        {
          "step": 2,
          "action": "臨床分型評估",
          "details": "區分肝毒素型（microcystin）和神經毒素型（anatoxin），評估器官損傷",
          "findings": ["肝毒素型：黃疸、肝腫大、腹水", "神經毒素型：肌肉震顫、癱瘓、呼吸麻痺", "混合型表現", "急性肝衰竭"]
        },
        {
          "step": 3,
          "action": "實驗室檢查",
          "details": "緊急血液生化（肝指數、凝血功能）、血糖、電解質",
          "findings": ["肝酵素顯著升高（ALT、AST）", "低血糖", "凝血功能異常（PT/APTT延長）", "膽紅素升高"]
        },
        {
          "step": 4,
          "action": "確診",
          "details": "根據暴露史和臨床表現臨床診斷，水源採樣送藻類毒素分析",
          "findings": ["暴露史加急性肝衰竭高度提示", "水源樣本藻類鑑定", "Microcystin-LR毒素檢測", "預後評估（肝毒素型死亡率高）"]
        }
      ]
    }
  },
  "disseminated-intravascular-coagulation": {
    "diagnosticAlgorithm": {
      "title": "瀰漫性血管內凝血 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "識別DIC高風險基礎疾病（敗血症、腫瘤、免疫媒介性溶血、胰臟炎），觀察出血傾向",
          "findings": ["瘀斑或出血點", "手術部位異常出血", "黏膜出血", "靜脈穿刺部位持續滲血"]
        },
        {
          "step": 2,
          "action": "凝血功能檢查",
          "details": "PT、APTT、纖維蛋白原、FDP/D-dimer、血小板計數",
          "findings": ["PT延長", "APTT延長", "血小板減少", "纖維蛋白原降低（消耗型）"]
        },
        {
          "step": 3,
          "action": "進階凝血評估",
          "details": "D-dimer、抗凝血酶III（ATIII）、血液抹片評估紅血球碎片",
          "findings": ["D-dimer顯著升高", "ATIII降低", "裂血球（紅血球碎片）", "FDP升高"]
        },
        {
          "step": 4,
          "action": "確診與基礎病因鑑定",
          "details": "DIC為臨床診斷（無單一確診試驗），需結合多項異常凝血指標及基礎疾病",
          "findings": ["符合DIC診斷標準（≥3項異常）", "識別並治療基礎疾病", "區分急性DIC vs慢性代償型DIC", "評估器官灌注損傷"]
        }
      ]
    }
  },
  "pure-red-cell-aplasia": {
    "diagnosticAlgorithm": {
      "title": "純紅血球再生不良 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估嚴重貧血但無明顯出血或溶血的表現，注意是否有慢性進行性虛弱",
          "findings": ["嚴重貧血（黏膜蒼白）", "虛弱及運動不耐受", "無明顯出血來源", "無黃疸（排除溶血）"]
        },
        {
          "step": 2,
          "action": "血液學檢查",
          "details": "CBC確認嚴重非再生性貧血（網織紅血球低），白血球和血小板通常正常",
          "findings": ["嚴重貧血（PCV可<10%）", "網織紅血球極低或缺如", "白血球計數正常", "血小板計數正常"]
        },
        {
          "step": 3,
          "action": "骨髓穿刺",
          "details": "骨髓抽吸及切片為確診必要檢查，評估紅血球前驅細胞",
          "findings": ["紅血球系列前驅細胞嚴重減少或缺如", "白血球系列正常", "巨核細胞正常", "成熟化停滯"]
        },
        {
          "step": 4,
          "action": "病因鑑別",
          "details": "排除藥物、感染（FeLV、細小病毒）、免疫媒介性原因",
          "findings": ["FeLV檢測（貓）", "細小病毒檢測", "藥物暴露史（氯黴素等）", "免疫媒介性PRCA（最常見犬）"]
        }
      ]
    }
  },
  "nasopharyngeal-stenosis": {
    "diagnosticAlgorithm": {
      "title": "鼻咽狹窄 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估慢性鼻塞、鼾聲樣呼吸、鼻分泌物，詢問是否有前期上呼吸道感染或手術史",
          "findings": ["慢性鼻塞樣呼吸", "鼾聲或喘鳴音", "張口呼吸", "鼻分泌物"]
        },
        {
          "step": 2,
          "action": "上呼吸道評估",
          "details": "胸部聽診排除下呼吸道疾病，頸部X光側位片評估鼻咽區域",
          "findings": ["吸氣性呼吸困難", "X光見鼻咽區域軟組織密度增加", "鼻咽通道狹窄", "排除鼻咽息肉"]
        },
        {
          "step": 3,
          "action": "後鼻鏡/內視鏡檢查",
          "details": "全身麻醉下逆行鼻咽鏡檢查直接觀察狹窄程度及位置",
          "findings": ["鼻咽膜性狹窄", "纖維性狹窄帶", "狹窄程度評估", "排除鼻咽腫瘤"]
        },
        {
          "step": 4,
          "action": "CT確認與治療規劃",
          "details": "CT精確評估狹窄範圍及程度，規劃球囊擴張或手術治療",
          "findings": ["狹窄位置精確定位", "狹窄長度評估", "周圍結構評估", "球囊擴張或支架置放規劃"]
        }
      ]
    }
  },
  "tracheal-hypoplasia": {
    "diagnosticAlgorithm": {
      "title": "氣管發育不全 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估短頭犬種幼犬的呼吸困難、運動不耐受，注意好發品種（英國鬥牛犬最常見）",
          "findings": ["呼吸困難（尤其運動後）", "鼾聲樣呼吸", "運動不耐受", "反覆呼吸道感染"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "頸部和胸部聽診評估氣道阻力，觸診氣管直徑",
          "findings": ["吸氣性及呼氣性喘鳴", "氣管觸診直徑偏小", "可能合併短頭犬呼吸道症候群", "發紺（嚴重時）"]
        },
        {
          "step": 3,
          "action": "影像學確診",
          "details": "胸部X光測量氣管直徑與胸廓入口比值（TD/TI ratio）",
          "findings": ["TD/TI比值<0.16（犬）提示氣管發育不全", "氣管全程直徑均勻偏小", "與氣管塌陷鑑別（塌陷為動態性）", "排除合併心臟畸形"]
        },
        {
          "step": 4,
          "action": "合併症評估",
          "details": "評估是否合併其他短頭犬呼吸道症候群組成或先天性心臟病",
          "findings": ["軟顎過長", "鼻孔狹窄", "先天性心臟病（常見合併症）", "評估手術矯正的適應症"]
        }
      ]
    }
  },
  "uterine-torsion": {
    "diagnosticAlgorithm": {
      "title": "子宮扭轉 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "評估懷孕或子宮蓄膿母犬的急性腹痛及休克表現",
          "findings": ["急性劇烈腹痛", "嘔吐", "休克徵象", "陰道血性分泌物"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "腹部觸診評估子宮大小及疼痛，評估循環狀態",
          "findings": ["腹部觸診劇烈疼痛", "子宮增大且形態異常", "腹部膨脹", "心搏過速及低血壓"]
        },
        {
          "step": 3,
          "action": "影像學檢查",
          "details": "腹部超音波或X光評估子宮位置及胎兒（如懷孕），排除其他急腹症",
          "findings": ["子宮異常扭轉位置", "胎兒存活度評估", "腹腔積液", "子宮壁水腫增厚"]
        },
        {
          "step": 4,
          "action": "手術確診",
          "details": "通常需緊急剖腹探查確診及治療，同時進行卵巢子宮切除",
          "findings": ["手術直接確認子宮扭轉", "評估子宮組織存活度", "子宮壞死程度", "緊急卵巢子宮切除"]
        }
      ]
    }
  },
  "transmissible-venereal-tumor": {
    "diagnosticAlgorithm": {
      "title": "傳染性性病腫瘤 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察外生殖器腫塊及血性分泌物，詢問交配史、流浪犬接觸史",
          "findings": ["外陰部或陰莖腫塊", "血性分泌物", "頻繁舔舐生殖器", "流浪犬或交配史"]
        },
        {
          "step": 2,
          "action": "腫塊檢查",
          "details": "直接觀察腫塊外觀（菜花樣、易碎、出血性），評估大小及數量",
          "findings": ["菜花樣或結節狀腫塊", "表面易碎且出血", "可能多發性", "偶見鼻腔、口腔或皮膚轉移"]
        },
        {
          "step": 3,
          "action": "細胞學/組織切片確診",
          "details": "FNA或印片細胞學檢查，可見特徵性圓形細胞，組織切片確診",
          "findings": ["圓形細胞腫瘤", "細胞質內特徵性空泡", "有絲分裂相多見", "免疫組織化學確認"]
        },
        {
          "step": 4,
          "action": "分期評估",
          "details": "評估局部侵犯範圍及有無遠端轉移，規劃化療方案",
          "findings": ["局部淋巴結評估", "皮膚轉移評估", "鼻腔及口腔轉移評估", "vincristine化療反應良好"]
        }
      ]
    }
  },
  "jaw-fracture": {
    "diagnosticAlgorithm": {
      "title": "下顎骨折 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "評估外傷史（車禍、墜落、咬傷），確認呼吸道通暢，控制出血",
          "findings": ["口部明顯錯位或不對稱", "無法閉合口部", "口腔出血", "流涎"]
        },
        {
          "step": 2,
          "action": "口腔及面部檢查",
          "details": "評估咬合關係、牙齒損傷、軟組織損傷，注意下顎聯合部位",
          "findings": ["咬合不正", "牙齒脫落或斷裂", "下顎活動度異常（骨折部位可動）", "口腔軟組織撕裂"]
        },
        {
          "step": 3,
          "action": "影像學確診",
          "details": "口腔X光及頭部X光確認骨折位置、類型、移位程度",
          "findings": ["骨折線確認", "下顎聯合分離（最常見）", "下顎體部骨折", "多處骨折評估"]
        },
        {
          "step": 4,
          "action": "全身評估與手術規劃",
          "details": "排除其他外傷（胸部、腹部），評估固定方式及預後",
          "findings": ["排除合併頭部外傷", "排除胸腹部損傷", "骨折固定方式選擇（鋼絲、骨板）", "營養支持計畫"]
        }
      ]
    }
  },
  "tongue-tumor": {
    "diagnosticAlgorithm": {
      "title": "舌頭腫瘤 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察進食困難、流涎、口臭、口腔出血，詢問症狀持續時間",
          "findings": ["進食困難或吞嚥困難", "過度流涎（可能帶血）", "口臭", "體重下降"]
        },
        {
          "step": 2,
          "action": "口腔檢查",
          "details": "鎮靜下完整口腔檢查，評估舌頭腫塊位置、大小、質地",
          "findings": ["舌頭表面或基部腫塊", "潰瘍性或增生性病變", "可能侵犯舌根", "下頜淋巴結腫大"]
        },
        {
          "step": 3,
          "action": "切片與細胞學",
          "details": "切開切片送病理學檢查確認腫瘤類型",
          "findings": ["鱗狀上皮細胞癌（犬最常見）", "黑色素瘤", "肥大細胞瘤", "纖維肉瘤"]
        },
        {
          "step": 4,
          "action": "分期與治療規劃",
          "details": "CT評估腫瘤範圍、骨侵犯、淋巴結轉移，胸部X光排除肺轉移",
          "findings": ["腫瘤局部侵犯範圍", "下頜骨侵犯評估", "局部淋巴結轉移", "遠端轉移評估"]
        }
      ]
    }
  }
}
