{
  "systemic-lupus-erythematosus": {
    "diagnosticAlgorithm": {
      "title": "全身性紅斑狼瘡 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估多系統受累表現，包括皮膚病變、多發性關節炎、發熱、淋巴結腫大",
          "findings": ["多發性關節炎（移行性跛行）", "皮膚潰瘍或紅斑", "不明原因發熱", "淋巴結腫大"]
        },
        {
          "step": 2,
          "action": "血液學檢查",
          "details": "完整血球計數、血液生化、尿液分析評估多器官受累",
          "findings": ["免疫媒介性溶血性貧血", "血小板減少", "蛋白尿（腎絲球腎炎）", "白血球減少"]
        },
        {
          "step": 3,
          "action": "免疫學檢查",
          "details": "抗核抗體（ANA）檢測、Coombs試驗、類風濕因子、LE細胞檢測",
          "findings": ["ANA陽性（主要診斷標準）", "Coombs試驗陽性", "LE細胞存在", "類風濕因子可能陽性"]
        },
        {
          "step": 4,
          "action": "組織切片與確診",
          "details": "皮膚切片病理學檢查，腎臟切片評估腎絲球腎炎，綜合多項標準確診",
          "findings": ["界面性皮膚炎", "免疫螢光染色基底膜帶狀沉積", "腎絲球腎炎", "符合SLE診斷標準（至少2項主要+2項次要）"]
        }
      ]
    }
  },
  "discoid-lupus-erythematosus": {
    "diagnosticAlgorithm": {
      "title": "盤狀紅斑狼瘡 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察鼻平面的脫色素、紅斑及潰瘍，注意日曬加重的特點",
          "findings": ["鼻平面色素脫失", "鼻部紅斑及結痂", "鼻平面正常鵝卵石紋理消失", "日曬後症狀加重"]
        },
        {
          "step": 2,
          "action": "全身評估",
          "details": "完整理學檢查排除全身性紅斑狼瘡的多系統表現，血液檢查排除系統性疾病",
          "findings": ["病變局限於面部（主要鼻平面）", "無關節炎", "無系統性症狀", "ANA通常為陰性"]
        },
        {
          "step": 3,
          "action": "皮膚切片",
          "details": "鼻平面病變區域皮膚切片送病理檢查，為確診必要步驟",
          "findings": ["界面性皮膚炎", "基底細胞液化變性", "淋巴漿細胞浸潤", "色素失禁"]
        },
        {
          "step": 4,
          "action": "確診與鑑別",
          "details": "根據臨床表現及組織病理確診，排除天疱瘡、皮膚真菌感染、鱗狀上皮細胞癌",
          "findings": ["確認為盤狀紅斑狼瘡", "排除天疱瘡（無棘層鬆解）", "排除鱗狀上皮細胞癌", "排除皮膚黴菌感染"]
        }
      ]
    }
  },
  "evan-syndrome": {
    "diagnosticAlgorithm": {
      "title": "乙凡氏症候群 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估貧血及出血傾向的雙重表現，詢問虛弱、出血點、黏膜蒼白",
          "findings": ["黏膜蒼白（貧血）", "瘀斑或出血點（血小板減少）", "虛弱無力", "心搏過速"]
        },
        {
          "step": 2,
          "action": "血液學檢查",
          "details": "完整血球計數確認同時存在貧血和血小板減少，網織紅血球計數、血液抹片",
          "findings": ["再生性貧血", "血小板嚴重減少", "球形紅血球增多", "網織紅血球增加"]
        },
        {
          "step": 3,
          "action": "免疫學確認",
          "details": "Coombs試驗確認免疫媒介性溶血，抗血小板抗體檢測",
          "findings": ["Coombs試驗陽性", "抗血小板抗體陽性", "自體凝集試驗可能陽性", "排除感染性病因"]
        },
        {
          "step": 4,
          "action": "骨髓檢查與確診",
          "details": "骨髓穿刺評估造血功能，排除骨髓疾病，確認同時存在IMHA和ITP",
          "findings": ["紅血球系列增生（再生性反應）", "巨核細胞正常或增加", "排除骨髓腫瘤", "確診Evans syndrome（IMHA + ITP）"]
        }
      ]
    }
  },
  "cold-agglutinin-disease": {
    "diagnosticAlgorithm": {
      "title": "冷凝集素病 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估末梢部位（耳尖、尾巴、趾端）的發紺、壞死，注意低溫暴露後症狀加重",
          "findings": ["耳尖發紺或壞死", "趾端蒼白或紫紺", "尾尖壞死", "低溫暴露後症狀明顯"]
        },
        {
          "step": 2,
          "action": "血液學檢查",
          "details": "CBC（注意採血後須保溫送檢）、血液抹片觀察紅血球凝集現象",
          "findings": ["貧血（可能中度至重度）", "血液抹片可見紅血球凝集", "凝集在37°C加溫後消失", "網織紅血球增加"]
        },
        {
          "step": 3,
          "action": "冷凝集素試驗",
          "details": "於不同溫度下進行血清凝集試驗，確認冷反應性自體抗體存在",
          "findings": ["4°C下紅血球凝集明顯", "37°C加溫後凝集消散", "冷凝集素效價升高", "IgM型自體抗體"]
        },
        {
          "step": 4,
          "action": "病因鑑別與確診",
          "details": "排除潛在感染性疾病或腫瘤性疾病引起的繼發性冷凝集素病",
          "findings": ["原發性（特發性）冷凝集素病", "排除淋巴瘤或骨髓瘤", "排除黴漿菌感染", "確認自體免疫性溶血性貧血亞型"]
        }
      ]
    }
  },
  "distributive-shock": {
    "diagnosticAlgorithm": {
      "title": "分配性休克 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "快速評估意識狀態、心血管功能（ABC原則），識別休克的早期和晚期徵象",
          "findings": ["高動力期：黏膜磚紅色、CRT短、脈搏有力", "低動力期：黏膜蒼白、CRT延長", "心搏過速", "意識狀態改變"]
        },
        {
          "step": 2,
          "action": "血壓與灌注評估",
          "details": "測量動脈血壓（直接或間接法），評估乳酸值及組織灌注指標",
          "findings": ["低血壓（收縮壓<90mmHg）", "血乳酸升高", "中心靜脈壓正常或偏低", "尿量減少"]
        },
        {
          "step": 3,
          "action": "病因鑑別",
          "details": "區分敗血性休克、過敏性休克、神經性休克，急查血液學及培養",
          "findings": ["敗血症指標（白血球異常、帶狀嗜中性球）", "過敏原暴露史", "脊髓損傷史（神經性休克）", "血液培養送檢"]
        },
        {
          "step": 4,
          "action": "進階監測與穩定",
          "details": "持續血壓監測、中心靜脈壓、血氣分析、連續乳酸監測評估治療反應",
          "findings": ["代謝性酸中毒", "電解質異常", "凝血功能障礙（可能DIC）", "器官灌注指標惡化或改善"]
        }
      ]
    }
  },
  "cardiogenic-shock": {
    "diagnosticAlgorithm": {
      "title": "心因性休克 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "快速評估意識、黏膜顏色、CRT、脈搏品質及呼吸狀態",
          "findings": ["黏膜蒼白或發紺", "CRT延長（>2秒）", "脈搏微弱", "呼吸困難（肺水腫）"]
        },
        {
          "step": 2,
          "action": "心血管專項檢查",
          "details": "心臟聽診、心電圖、血壓測量，評估心臟泵血功能",
          "findings": ["心雜音或心律不整", "心搏過速或過緩", "低血壓", "頸靜脈怒張"]
        },
        {
          "step": 3,
          "action": "心臟超音波（急診）",
          "details": "床邊心臟超音波評估心臟收縮功能、瓣膜功能、心包積液",
          "findings": ["左心室收縮功能下降（低FS%）", "心包積液（心包填塞）", "嚴重瓣膜疾病", "擴張型心肌病"]
        },
        {
          "step": 4,
          "action": "胸部X光與血液檢查",
          "details": "胸部X光評估心影大小和肺部水腫，血液檢查評估器官灌注",
          "findings": ["心影擴大", "肺水腫", "血乳酸升高", "腎指數升高（腎前性氮血症）"]
        }
      ]
    }
  },
  "hemorrhagic-shock": {
    "diagnosticAlgorithm": {
      "title": "出血性休克 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "快速辨識出血來源（外部可見或內部出血），評估休克程度",
          "findings": ["黏膜蒼白", "心搏過速", "脈搏微弱且快", "四肢末端冰冷"]
        },
        {
          "step": 2,
          "action": "出血來源鑑定",
          "details": "外部出血直接評估，內部出血透過FAST超音波掃描、腹腔穿刺",
          "findings": ["外傷性出血（明顯傷口）", "腹腔積液（FAST陽性）", "胸腔積液", "消化道出血（黑便或血便）"]
        },
        {
          "step": 3,
          "action": "血液學緊急檢查",
          "details": "急查PCV/TP、血型、凝血功能、血乳酸",
          "findings": ["PCV下降（急性期可能尚正常）", "總蛋白下降", "乳酸升高（>2.5mmol/L）", "凝血時間可能延長"]
        },
        {
          "step": 4,
          "action": "穩定化與進階評估",
          "details": "快速輸液復甦、必要時輸血，持續監測反應並尋找確切出血原因",
          "findings": ["對輸液反應評估", "是否需要輸血（PCV<20%）", "影像學確認出血部位", "凝血功能異常需進一步檢查"]
        }
      ]
    }
  },
  "smoke-inhalation": {
    "diagnosticAlgorithm": {
      "title": "煙霧吸入傷害 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "確認火災暴露史，評估呼吸道及全身狀況，注意症狀可能延遲24-48小時出現",
          "findings": ["面部或口鼻燒傷痕跡", "煙灰沉積於口鼻", "呼吸困難或喘鳴", "意識狀態改變（一氧化碳中毒）"]
        },
        {
          "step": 2,
          "action": "呼吸系統評估",
          "details": "胸部聽診、動脈血氣分析、脈搏血氧儀（注意CO中毒時SpO2可能假性正常）",
          "findings": ["肺部爆裂音或喘鳴音", "PaO2下降", "CO-Hb升高", "代謝性酸中毒"]
        },
        {
          "step": 3,
          "action": "影像與實驗室檢查",
          "details": "胸部X光（初期可能正常，24-48小時後出現變化）、CBC、生化",
          "findings": ["初期X光可能正常", "後續出現間質性或肺泡性浸潤", "白血球升高", "肝腎指數可能異常"]
        },
        {
          "step": 4,
          "action": "持續監測",
          "details": "連續評估呼吸功能，監測肺水腫、ARDS發展，眼角膜檢查",
          "findings": ["進行性呼吸困難", "ARDS發展", "角膜潰瘍（熱或化學性損傷）", "上呼吸道水腫加重"]
        }
      ]
    }
  },
  "electrocution": {
    "diagnosticAlgorithm": {
      "title": "觸電傷害 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "確認觸電史（咬電線最常見），評估意識、呼吸、心跳，注意可能的心律不整",
          "findings": ["口腔燒傷（電線咬傷）", "呼吸困難", "心律不整", "意識喪失或抽搐"]
        },
        {
          "step": 2,
          "action": "口腔及呼吸道檢查",
          "details": "仔細檢查口腔電灼傷範圍，評估上呼吸道水腫程度",
          "findings": ["口腔黏膜灰白色壞死區域", "舌頭灼傷", "唇部損傷", "口腔水腫"]
        },
        {
          "step": 3,
          "action": "心血管及肺部評估",
          "details": "心電圖監測心律不整、胸部X光排除肺水腫（非心因性）",
          "findings": ["心室早期收縮", "竇性心搏過速", "非心因性肺水腫", "胸部X光肺浸潤"]
        },
        {
          "step": 4,
          "action": "持續監測與預後評估",
          "details": "24-72小時持續心電圖監測，評估口腔傷口範圍（壞死範圍可能擴大）",
          "findings": ["心律恢復正常", "口腔壞死組織界線明確（3-5天）", "肺水腫消退", "可能需要後續口腔重建"]
        }
      ]
    }
  },
  "crush-injury": {
    "diagnosticAlgorithm": {
      "title": "壓砸傷 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "確認壓砸史，快速評估ABC（呼吸道、呼吸、循環），評估休克狀態",
          "findings": ["外傷明顯損傷", "休克徵象", "受壓部位腫脹", "可能伴有骨折"]
        },
        {
          "step": 2,
          "action": "損傷範圍評估",
          "details": "系統性評估所有損傷，FAST超音波檢查內部出血，神經功能評估",
          "findings": ["軟組織挫傷及腫脹", "開放性或閉合性骨折", "腹腔積液（內出血）", "神經功能缺損"]
        },
        {
          "step": 3,
          "action": "實驗室與影像檢查",
          "details": "急查血液學、生化（特別是肌酸激酶、鉀離子）、X光骨骼評估",
          "findings": ["CK顯著升高（橫紋肌溶解）", "高鉀血症", "肌紅蛋白尿", "影像確認骨折及脫位"]
        },
        {
          "step": 4,
          "action": "併發症監測",
          "details": "監測再灌注損傷、急性腎損傷、腔室症候群，持續評估組織存活度",
          "findings": ["急性腎損傷（肌紅蛋白腎病）", "高鉀血症致心律不整", "腔室症候群", "DIC發展"]
        }
      ]
    }
  }
}
