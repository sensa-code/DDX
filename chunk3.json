{
  "dystocia": {
    "diagnosticAlgorithm": {
      "title": "難產 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "詢問懷孕天數、已產出胎兒數、用力時間、有無綠色分泌物（胎盤分離），評估母體狀態",
          "findings": ["活躍用力超過30分鐘無胎兒產出", "兩胎兒間隔超過2-4小時", "綠色或血性陰道分泌物", "母體虛弱或體溫異常"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "觸診腹部評估胎兒數量及位置、陰道檢查確認有無產道阻塞或胎兒嵌頓",
          "findings": ["胎兒可觸及但無法產出", "產道狹窄", "胎兒異常胎位（橫位、臀位）", "子宮頸未完全擴張"]
        },
        {
          "step": 3,
          "action": "影像學檢查",
          "details": "腹部X光確認胎兒數量、大小及位置，超音波評估胎兒存活度（心跳）",
          "findings": ["胎兒數量確認", "胎兒過大（胎兒-母體不匹配）", "胎兒心率評估（正常>180bpm）", "胎兒心率下降（<150bpm為窘迫）"]
        },
        {
          "step": 4,
          "action": "決策與處置",
          "details": "根據病因決定醫療處置（催產素）或手術介入（剖腹產）的時機",
          "findings": ["阻塞性難產需手術", "子宮惰性可試催產素", "胎兒窘迫需緊急手術", "母體狀態不穩需先穩定"]
        }
      ]
    }
  },
  "eclampsia": {
    "diagnosticAlgorithm": {
      "title": "產後子癇（低血鈣症）診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "詢問泌乳狀態（通常產後1-4週好發）、幼崽數量（窩仔多風險高），觀察神經肌肉症狀",
          "findings": ["焦躁不安、喘息", "肌肉僵直或震顫", "共濟失調、步態僵硬", "嚴重時全身性癲癇發作"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "評估體溫（常升高）、心率（心搏過速）、肌肉張力，注意鑑別其他癲癇原因",
          "findings": ["高體溫（>40°C）", "心搏過速", "肌肉震顫或僵直", "瞳孔散大"]
        },
        {
          "step": 3,
          "action": "血鈣測定（急診）",
          "details": "急查離子鈣或總鈣值，血鈣低於正常範圍即可確診",
          "findings": ["總鈣<7mg/dL", "離子鈣<0.8mmol/L", "低血糖可能併存", "磷偏高"]
        },
        {
          "step": 4,
          "action": "治療性診斷",
          "details": "靜脈緩慢給予10%葡萄糖酸鈣，觀察臨床症狀是否迅速改善以輔助確診",
          "findings": ["給鈣後肌肉僵直緩解", "震顫停止", "心率恢復正常", "體溫逐漸下降"]
        }
      ]
    }
  },
  "metritis": {
    "diagnosticAlgorithm": {
      "title": "子宮炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "詢問近期生產史（通常產後1-7天發生）、難產史、胎兒滯留史，評估全身症狀",
          "findings": ["產後發熱", "腥臭惡露（紅褐色或膿性）", "精神沉鬱、食慾不振", "忽略幼崽"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "測量體溫、腹部觸診子宮大小及疼痛度、陰道檢查分泌物性質",
          "findings": ["發熱（>39.5°C）", "子宮增大且觸診疼痛", "陰道惡臭分泌物", "脫水"]
        },
        {
          "step": 3,
          "action": "實驗室與影像檢查",
          "details": "CBC（白血球升高）、血液生化、腹部X光或超音波排除滯留胎兒",
          "findings": ["嗜中性球升高伴左移", "超音波見子宮擴張含液體", "X光排除滯留胎兒或胎膜", "可能有敗血症指標"]
        },
        {
          "step": 4,
          "action": "細菌培養與確診",
          "details": "陰道分泌物細菌培養及藥敏試驗，確認致病菌及選擇適當抗生素",
          "findings": ["大腸桿菌最常見", "鏈球菌或葡萄球菌", "混合感染", "藥敏結果指導抗生素選擇"]
        }
      ]
    }
  },
  "vaginitis": {
    "diagnosticAlgorithm": {
      "title": "陰道炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "詢問分泌物性質、舔陰部行為、排尿異常，區分幼年型與成年型陰道炎",
          "findings": ["陰道黏液膿性分泌物", "頻繁舔舐外陰部", "頻尿或排尿困難", "吸引公犬"]
        },
        {
          "step": 2,
          "action": "理學與陰道檢查",
          "details": "外陰觀察、陰道鏡檢查評估黏膜狀態，排除解剖異常",
          "findings": ["陰道黏膜充血紅腫", "黏液膿性分泌物", "可能有陰道狹窄或隔膜", "排除陰道腫瘤"]
        },
        {
          "step": 3,
          "action": "實驗室檢查",
          "details": "陰道分泌物細胞學檢查、細菌培養，尿液分析排除泌尿道感染",
          "findings": ["細胞學見大量嗜中性球", "細菌培養（常見大腸桿菌）", "尿液分析排除UTI", "陰道細胞學評估動情週期"]
        },
        {
          "step": 4,
          "action": "確診與鑑別",
          "details": "根據檢查結果確診，排除子宮蓄膿、泌尿道感染、布魯氏菌感染",
          "findings": ["單純性陰道炎確認", "排除子宮蓄膿", "排除泌尿道感染", "幼年型可能於第一次發情後自行改善"]
        }
      ]
    }
  },
  "paraphimosis": {
    "diagnosticAlgorithm": {
      "title": "嵌頓包皮症 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察陰莖無法回縮入包皮的狀態，詢問發生時間及誘因（交配、毛髮纏繞）",
          "findings": ["陰莖暴露無法回縮", "陰莖腫脹充血", "動物舔舐或不適", "可能伴有排尿困難"]
        },
        {
          "step": 2,
          "action": "局部檢查",
          "details": "評估陰莖組織存活度、水腫程度、有無外傷或異物，檢查包皮口是否過窄",
          "findings": ["陰莖水腫增大", "黏膜乾燥或損傷", "包皮口狹窄限制回縮", "毛髮纏繞（常見原因）"]
        },
        {
          "step": 3,
          "action": "鑑別診斷",
          "details": "區分原發性嵌頓（包皮口狹窄）和繼發性嵌頓（外傷、腫瘤），評估是否需緊急處理",
          "findings": ["包皮口狹窄（先天性）", "外傷後腫脹導致", "陰莖腫瘤", "組織壞死風險評估"]
        }
      ]
    }
  },
  "orchitis-epididymitis": {
    "diagnosticAlgorithm": {
      "title": "睪丸附睪炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察陰囊腫脹及疼痛表現，詢問有無外傷、交配史、全身症狀",
          "findings": ["陰囊腫大且疼痛", "患側睪丸增大", "行走姿勢異常（後肢僵硬）", "發熱及精神沉鬱"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "仔細觸診睪丸及附睪，評估腫脹部位、質地、溫度，雙側比較",
          "findings": ["睪丸增大且觸診疼痛", "附睪腫脹硬化", "陰囊皮膚紅腫發熱", "可能有膿性分泌物"]
        },
        {
          "step": 3,
          "action": "影像與實驗室檢查",
          "details": "超音波評估睪丸實質及附睪結構，精液檢查或尿液培養",
          "findings": ["超音波見睪丸實質不均質", "附睪增大低回音", "陰囊積液", "血液學見白血球升高"]
        },
        {
          "step": 4,
          "action": "病因鑑別與確診",
          "details": "細菌培養（精液或細針抽吸）確認病原，排除布魯氏菌感染及睪丸腫瘤",
          "findings": ["細菌培養鑑定致病菌", "布魯氏菌血清學檢查", "排除睪丸腫瘤（單側無痛性增大）", "外傷性vs感染性鑑別"]
        }
      ]
    }
  },
  "tooth-fracture": {
    "diagnosticAlgorithm": {
      "title": "牙齒斷裂 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "詢問咬硬物史、外傷史，觀察採食行為改變、單側咀嚼、流涎",
          "findings": ["採食困難或單側咀嚼", "流涎增加", "觸碰口部敏感", "可見斷裂牙齒"]
        },
        {
          "step": 2,
          "action": "口腔檢查",
          "details": "全口檢查（可能需鎮靜），評估斷裂類型（釉質/齒質/露髓）、牙齒變色",
          "findings": ["牙冠斷裂可見", "牙髓暴露（粉紅色點）", "牙齒變色（灰色或紫色，牙髓壞死）", "齒齦腫脹或瘻管"]
        },
        {
          "step": 3,
          "action": "牙科X光",
          "details": "根尖周X光評估牙根完整性、根尖病變、齒槽骨狀態",
          "findings": ["牙根斷裂", "根尖周透射區（根尖膿腫）", "齒槽骨吸收", "牙根吸收"]
        },
        {
          "step": 4,
          "action": "斷裂分型與治療決策",
          "details": "根據斷裂分型決定保守治療（覆蓋保護）、根管治療或拔牙",
          "findings": ["未複雜性冠折（未露髓）", "複雜性冠折（牙髓暴露）", "根折", "需要根管治療或拔牙"]
        }
      ]
    }
  },
  "retained-deciduous-teeth": {
    "diagnosticAlgorithm": {
      "title": "乳牙滯留 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "確認動物年齡（通常6-7月齡換牙），檢查是否有雙排牙現象",
          "findings": ["恆齒已萌出但乳牙未脫落", "雙排牙（乳牙與恆齒並存）", "好發於小型犬", "犬齒最常受影響"]
        },
        {
          "step": 2,
          "action": "口腔檢查",
          "details": "系統性檢查所有牙位，記錄滯留乳牙數量及位置，評估咬合影響",
          "findings": ["滯留乳犬齒最常見", "滯留乳門齒", "滯留乳前臼齒", "恆齒位置偏移"]
        },
        {
          "step": 3,
          "action": "X光評估",
          "details": "牙科X光確認乳牙牙根狀態及恆齒發育位置",
          "findings": ["乳牙牙根未吸收", "恆齒萌出方向異常", "恆齒牙根發育正常", "排除恆齒缺失（無繼承齒）"]
        },
        {
          "step": 4,
          "action": "治療決策",
          "details": "確認需要拔除的乳牙，評估咬合異常是否需矯正",
          "findings": ["建議拔除所有滯留乳牙", "恆齒萌出位置偏移需觀察", "咬合不正可能需矯正", "建議與絕育手術同時進行"]
        }
      ]
    }
  },
  "oronasal-fistula": {
    "diagnosticAlgorithm": {
      "title": "口鼻瘻管 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "詢問單側鼻分泌物（尤其進食後打噴嚏）、慢性鼻炎史、拔牙史",
          "findings": ["進食後打噴嚏", "單側鼻分泌物（膿性或食物殘渣）", "慢性鼻炎反覆發作", "既往上頜牙齒拔除史"]
        },
        {
          "step": 2,
          "action": "口腔檢查",
          "details": "全口檢查（需麻醉），特別檢查上頜犬齒及前臼齒區域齒槽骨缺損",
          "findings": ["上頜齒槽骨缺損可見", "牙周探針可通入鼻腔", "上頜犬齒區域最常見", "嚴重牙周病伴骨質吸收"]
        },
        {
          "step": 3,
          "action": "牙科X光",
          "details": "根尖周X光評估齒槽骨破壞範圍及口鼻腔連通程度",
          "findings": ["齒槽骨明顯吸收或缺失", "鼻腔底部骨質破壞", "可能有殘留牙根", "周圍牙齒受累評估"]
        },
        {
          "step": 4,
          "action": "確診與手術規劃",
          "details": "確認瘻管位置及大小，規劃黏膜瓣修補手術",
          "findings": ["瘻管大小及位置確認", "周圍組織評估是否足夠製作黏膜瓣", "需要拔除的受累牙齒", "術後鼻炎改善預期"]
        }
      ]
    }
  },
  "masticatory-myositis": {
    "diagnosticAlgorithm": {
      "title": "咀嚼肌肌炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察張口困難（急性期腫脹、慢性期萎縮）、進食困難，注意好發品種",
          "findings": ["急性期：咀嚼肌腫脹疼痛", "慢性期：咀嚼肌萎縮（顳肌凹陷）", "張口困難或無法張口", "進食困難、流涎"]
        },
        {
          "step": 2,
          "action": "理學與神經學檢查",
          "details": "評估張口幅度（麻醉下也受限）、觸診咀嚼肌群、排除TMJ疾病及神經病變",
          "findings": ["麻醉下仍無法完全張口", "咀嚼肌觸診疼痛（急性）或萎縮（慢性）", "三叉神經功能正常", "眼球可能突出（急性腫脹期）"]
        },
        {
          "step": 3,
          "action": "免疫學檢查",
          "details": "2M纖維抗體檢測（確診金標準），CK值測定",
          "findings": ["抗2M纖維抗體陽性（確診）", "CK升高（急性期）", "CK正常（慢性期）", "排除多發性肌炎（四肢肌肉未受累）"]
        },
        {
          "step": 4,
          "action": "肌肉切片（必要時）",
          "details": "咀嚼肌切片病理學檢查，特別適用於抗體檢測結果不確定時",
          "findings": ["肌纖維壞死及再生", "淋巴漿細胞浸潤", "2M纖維選擇性受累", "慢性期見纖維化取代肌肉"]
        }
      ]
    }
  }
}
