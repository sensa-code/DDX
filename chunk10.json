{
  "steroid-responsive-meningitis-arteritis": {
    "diagnosticAlgorithm": {
      "title": "類固醇反應性腦膜炎動脈炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估年輕大型犬的頸部疼痛、僵硬、發熱，注意好發品種（拳師犬、米格魯、伯恩山犬）",
          "findings": ["頸部疼痛及僵硬", "不願移動或低頭", "發熱（>40°C）", "疼痛反應（觸碰頸部時哀嚎）"]
        },
        {
          "step": 2,
          "action": "血液學檢查",
          "details": "CBC及急性期蛋白評估全身性發炎反應",
          "findings": ["嗜中性球升高（白血球可>20,000）", "CRP顯著升高", "IgA升高（血清及CSF）", "輕度貧血（慢性病貧血）"]
        },
        {
          "step": 3,
          "action": "腦脊液分析（確診）",
          "details": "腰椎穿刺取CSF分析，為確診關鍵檢查",
          "findings": ["CSF蛋白顯著升高", "嗜中性球性多細胞症（急性期）", "CSF IgA升高", "細菌培養陰性"]
        },
        {
          "step": 4,
          "action": "治療性確診",
          "details": "對類固醇治療的快速反應支持診斷，MRI排除其他結構性病變",
          "findings": ["類固醇治療24-48小時內明顯改善", "MRI可能見腦膜強化", "排除椎間盤疾病", "排除感染性腦膜炎"]
        }
      ]
    }
  },
  "discospondylitis": {
    "diagnosticAlgorithm": {
      "title": "椎間盤脊椎炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估脊椎疼痛、發熱、僵硬步態，詢問有無感染病灶（泌尿道、皮膚）",
          "findings": ["脊椎觸診疼痛", "僵硬步態", "不願跳躍或運動", "發熱及精神沉鬱"]
        },
        {
          "step": 2,
          "action": "脊椎X光",
          "details": "脊椎X光尋找椎體終板溶解及椎間隙狹窄（早期可能正常，2-4週後出現）",
          "findings": ["椎體終板溶解", "椎間隙狹窄", "椎體硬化（慢性）", "多處病灶可能"]
        },
        {
          "step": 3,
          "action": "進階影像與培養",
          "details": "CT或MRI評估脊髓壓迫，血液及尿液培養鑑定病原",
          "findings": ["MRI見椎體及椎間盤訊號異常", "硬脊膜外膿腫", "血液培養（Staphylococcus最常見）", "尿液培養（Brucella排除）"]
        },
        {
          "step": 4,
          "action": "確診與抗生素選擇",
          "details": "根據影像及培養結果確診，長期抗生素治療（6-8週以上）",
          "findings": ["Staphylococcus spp.最常見", "Brucella canis檢測", "Aspergillus（德牧易感）", "CT引導穿刺取樣（培養陰性時）"]
        }
      ]
    }
  },
  "atlantoaxial-instability": {
    "diagnosticAlgorithm": {
      "title": "寰樞椎不穩定 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估幼年小型犬的頸部疼痛及神經症狀，注意好發品種（約克夏、吉娃娃、博美）",
          "findings": ["頸部疼痛（不願抬頭或轉頭）", "四肢共濟失調", "四肢輕癱或癱瘓", "急性惡化後可能呼吸衰竭"]
        },
        {
          "step": 2,
          "action": "神經學檢查",
          "details": "定位病變於C1-C5脊髓節段，評估神經功能缺損程度",
          "findings": ["上運動神經元四肢輕癱", "頸部操作加重症狀", "本體感覺缺失", "嚴重時呼吸困難"]
        },
        {
          "step": 3,
          "action": "影像學確診",
          "details": "頸椎側位X光（注意：禁止頸部屈曲以免加重脊髓損傷），CT或MRI評估",
          "findings": ["寰樞椎間距增大", "齒突缺失或發育不全", "CT見齒突骨折或發育不全", "MRI評估脊髓壓迫及損傷"]
        },
        {
          "step": 4,
          "action": "治療決策",
          "details": "根據神經功能缺損程度決定保守（頸部固定）或手術穩定",
          "findings": ["齒突發育不全確認", "寰樞椎半脫位程度", "脊髓壓迫嚴重度", "手術穩定術（腹側固定）評估"]
        }
      ]
    }
  },
  "lumbosacral-disease": {
    "diagnosticAlgorithm": {
      "title": "腰薦椎疾病 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估後肢跛行、尾巴功能、排泄功能，注意好發於中大型犬（德牧最常見）",
          "findings": ["後肢跛行或虛弱", "尾巴下垂無法擺動", "排尿或排便困難", "腰薦部疼痛"]
        },
        {
          "step": 2,
          "action": "神經學檢查",
          "details": "評估後肢反射、坐骨神經功能、肛門張力、腰薦部觸診",
          "findings": ["腰薦部直接壓迫疼痛", "坐骨神經功能異常", "膝反射正常但提趾反射降低", "肛門張力降低"]
        },
        {
          "step": 3,
          "action": "影像學檢查",
          "details": "腰薦椎X光、CT或MRI評估狹窄及壓迫程度",
          "findings": ["X光見腰薦椎間隙狹窄或硬化", "CT見椎間盤突出或骨贅", "MRI見馬尾神經壓迫", "椎管狹窄"]
        },
        {
          "step": 4,
          "action": "確診與治療選擇",
          "details": "結合臨床及影像確診腰薦椎狹窄症，評估保守或手術治療",
          "findings": ["退化性腰薦椎狹窄", "椎間盤突出壓迫馬尾", "保守治療（NSAID、物理治療）", "手術減壓（背側椎板切除）"]
        }
      ]
    }
  },
  "myelodysplastic-syndrome": {
    "diagnosticAlgorithm": {
      "title": "骨髓增生異常症候群 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估慢性進行性血球減少的臨床表現（貧血、感染、出血）",
          "findings": ["慢性貧血不對治療反應", "反覆感染", "出血傾向", "精神沉鬱及虛弱"]
        },
        {
          "step": 2,
          "action": "血液學檢查",
          "details": "CBC見一系或多系血球減少，血液抹片觀察異常形態",
          "findings": ["一系或多系血球減少", "大紅血球症", "嗜中性球核分葉異常", "血小板形態異常"]
        },
        {
          "step": 3,
          "action": "骨髓穿刺（確診必要）",
          "details": "骨髓抽吸及切片評估造血細胞形態異常及芽球比例",
          "findings": ["造血細胞發育異常（dysplasia）", "無效造血", "芽球比例增加但<20%", "骨髓細胞增生但周邊血球減少"]
        },
        {
          "step": 4,
          "action": "分型與預後",
          "details": "根據芽球比例及發育異常程度分型，排除其他骨髓疾病",
          "findings": ["MDS-RC（芽球<5%）", "MDS-EB（芽球5-19%）", "排除急性白血病（芽球≥20%）", "FeLV檢測（貓常見病因）"]
        }
      ]
    }
  },
  "canine-atopic-dermatitis": {
    "diagnosticAlgorithm": {
      "title": "犬異位性皮膚炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估搔癢分布（面部、耳朵、足部、腋下、腹股溝），發病年齡（1-3歲好發）",
          "findings": ["面部及耳部搔癢", "足部舔咬", "腋下及腹股溝紅腫", "季節性或全年性症狀"]
        },
        {
          "step": 2,
          "action": "排除其他搔癢病因",
          "details": "皮膚搔刮排除蟎蟲、跳蚤防治排除跳蚤過敏、食物排除試驗排除食物過敏",
          "findings": ["皮膚搔刮排除疥癬", "跳蚤預防及治療（排除FAD）", "黴菌培養排除皮黴菌", "8-12週嚴格食物排除試驗"]
        },
        {
          "step": 3,
          "action": "Favrot臨床標準評估",
          "details": "應用Favrot 2010臨床標準（8項中符合≥5項）輔助臨床診斷",
          "findings": ["3歲前發病", "主要室內生活", "類固醇反應性搔癢", "足部受累"]
        },
        {
          "step": 4,
          "action": "過敏原檢測與確診",
          "details": "皮內試驗或血清IgE檢測鑑定過敏原（用於免疫治療規劃，非診斷）",
          "findings": ["環境過敏原鑑定（塵蟎、花粉、黴菌）", "用於免疫治療配方設計", "異位性皮膚炎為臨床排除診斷", "長期管理方案制定"]
        }
      ]
    }
  },
  "flea-allergy-dermatitis": {
    "diagnosticAlgorithm": {
      "title": "跳蚤過敏性皮膚炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估搔癢分布（尾根部、後腿內側、腹部），觀察跳蚤或跳蚤糞便",
          "findings": ["尾根部嚴重搔癢", "後背及後腿內側脫毛", "皮膚紅腫丘疹", "跳蚤糞便（黑色小粒）"]
        },
        {
          "step": 2,
          "action": "跳蚤檢查",
          "details": "仔細梳檢跳蚤或跳蚤糞便（濕紙巾測試呈紅褐色溶解為跳蚤糞）",
          "findings": ["發現跳蚤或跳蚤糞便", "濕紙巾測試陽性", "可能未見跳蚤（過敏動物過度理毛移除）", "環境中可能有跳蚤"]
        },
        {
          "step": 3,
          "action": "治療性診斷",
          "details": "給予嚴格跳蚤防治（動物及環境）8-12週，觀察症狀改善",
          "findings": ["嚴格跳蚤防治後搔癢改善", "皮膚病變消退", "所有同住動物需同時治療", "環境清潔及處理"]
        },
        {
          "step": 4,
          "action": "確診",
          "details": "跳蚤防治後症狀改善即可確診，皮內試驗可輔助但非必要",
          "findings": ["跳蚤控制後完全緩解", "跳蚤過敏性皮膚炎確診", "需終生跳蚤防治", "排除合併異位性皮膚炎"]
        }
      ]
    }
  },
  "cranial-cruciate-ligament-disease": {
    "diagnosticAlgorithm": {
      "title": "前十字韌帶疾病 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估後肢跛行模式（急性或慢性進行性），詢問外傷史或活動情況",
          "findings": ["後肢跛行（承重減少）", "坐下時患肢外展", "活動後跛行加重", "肌肉萎縮（慢性）"]
        },
        {
          "step": 2,
          "action": "骨科檢查",
          "details": "前抽屜試驗及脛骨前移試驗（鎮靜下更準確），評估關節積液",
          "findings": ["前抽屜試驗陽性", "脛骨壓迫試驗陽性", "關節積液（內側關節囊膨出）", "關節活動範圍受限"]
        },
        {
          "step": 3,
          "action": "影像學檢查",
          "details": "膝關節X光評估關節退化程度、排除其他病變、測量脛骨平台角度",
          "findings": ["關節積液影像", "骨贅形成（退化性關節病）", "脛骨平台角度（TPLO規劃用）", "排除骨腫瘤"]
        },
        {
          "step": 4,
          "action": "確診與手術規劃",
          "details": "根據臨床檢查及影像確診，評估手術方式（TPLO、TTA、關節外穩定術）",
          "findings": ["前十字韌帶部分或完全撕裂", "內側半月板損傷評估", "對側膝關節評估（60%雙側發生）", "手術方式選擇"]
        }
      ]
    }
  },
  "hip-dysplasia": {
    "diagnosticAlgorithm": {
      "title": "髖關節發育不良 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估後肢跛行、起立困難、兔跳步態，注意好發品種（德牧、拉布拉多、黃金獵犬）",
          "findings": ["後肢跛行或僵硬", "起立困難", "兔跳步態（雙後肢同時推進）", "運動後症狀加重"]
        },
        {
          "step": 2,
          "action": "骨科檢查",
          "details": "Ortolani試驗評估髖關節鬆弛度，後肢伸展疼痛評估",
          "findings": ["Ortolani試驗陽性（年輕犬）", "髖關節伸展疼痛", "後肢肌肉萎縮", "關節活動範圍受限"]
        },
        {
          "step": 3,
          "action": "影像學確診",
          "details": "標準骨盆伸展X光評估關節吻合度，Norberg角測量",
          "findings": ["髖臼淺化", "股骨頭覆蓋率不足", "Norberg角<105度", "退化性關節病變"]
        },
        {
          "step": 4,
          "action": "分級與治療規劃",
          "details": "髖關節發育不良分級（OFA或PennHIP），根據年齡及嚴重度選擇治療",
          "findings": ["OFA分級（正常到嚴重）", "年輕犬可考慮JPS或TPO", "成犬考慮THR或FHO", "保守管理（體重控制、NSAID、物理治療）"]
        }
      ]
    }
  },
  "patellar-luxation": {
    "diagnosticAlgorithm": {
      "title": "髕骨脫位 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察間歇性跛行（跳步後恢復正常）、注意小型犬好發（內側脫位）",
          "findings": ["間歇性後肢抬舉（跳步）", "跛行自行恢復", "小型犬好發（內側脫位）", "大型犬可能外側脫位"]
        },
        {
          "step": 2,
          "action": "骨科觸診",
          "details": "觸診髕骨位置及可推動性，評估脫位分級（I-IV級）",
          "findings": ["Grade I：可手動脫位但自動復位", "Grade II：可手動脫位需手動復位", "Grade III：持續脫位可手動復位但立即再脫", "Grade IV：持續脫位無法手動復位"]
        },
        {
          "step": 3,
          "action": "影像學評估",
          "details": "膝關節X光評估骨骼排列異常程度、股骨溝深度、脛骨嵴偏移",
          "findings": ["髕骨位置異常", "股骨滑車溝淺化", "脛骨嵴內偏或外偏", "退化性關節病變"]
        },
        {
          "step": 4,
          "action": "手術適應症評估",
          "details": "Grade II以上或有持續跛行者建議手術矯正",
          "findings": ["滑車溝加深術", "脛骨嵴移植術", "關節囊收緊術", "股骨矯正截骨（嚴重時）"]
        }
      ]
    }
  }
}
