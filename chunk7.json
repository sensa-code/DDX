{
  "tetralogy-of-fallot": {
    "diagnosticAlgorithm": {
      "title": "法洛氏四聯症 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察幼年動物的發紺、運動不耐受、可能的暈厥發作",
          "findings": ["運動後發紺加重", "運動不耐受", "蹲踞姿勢（增加體循環阻力）", "暈厥發作"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "聽診評估心雜音（收縮期噴射性雜音），評估紅血球增多症",
          "findings": ["左側胸壁收縮期噴射性雜音", "黏膜發紺", "PCV升高（代償性紅血球增多）", "胸部觸診震顫"]
        },
        {
          "step": 3,
          "action": "心臟超音波（確診）",
          "details": "彩色都卜勒心臟超音波確認四項特徵：VSD、肺動脈狹窄、主動脈騎跨、右心室肥厚",
          "findings": ["心室中隔缺損（VSD）", "肺動脈狹窄", "主動脈騎跨於VSD上", "右心室肥厚"]
        },
        {
          "step": 4,
          "action": "輔助檢查與嚴重度評估",
          "details": "X光、心電圖、血液學評估，進階可考慮心導管",
          "findings": ["X光見右心室擴大", "心電圖右軸偏移", "紅血球增多症程度", "評估姑息性或矯正性手術可行性"]
        }
      ]
    }
  },
  "primary-ciliary-dyskinesia": {
    "diagnosticAlgorithm": {
      "title": "原發性纖毛運動障礙 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估幼年動物自幼即有的慢性呼吸道症狀（鼻分泌物、咳嗽），注意是否有內臟反轉",
          "findings": ["自幼即有慢性鼻分泌物", "慢性支氣管肺炎", "不孕", "可能有內臟反轉（Kartagener syndrome）"]
        },
        {
          "step": 2,
          "action": "影像學檢查",
          "details": "胸腹部X光評估肺部病變及內臟位置",
          "findings": ["支氣管擴張症", "慢性肺炎", "內臟反轉（心臟右位、肝臟左位）", "鼻竇黏膜增厚"]
        },
        {
          "step": 3,
          "action": "呼吸道採樣",
          "details": "支氣管肺泡灌洗液分析，黏膜纖毛清除率測試",
          "findings": ["BAL見嗜中性球為主的發炎", "核素黏液纖毛清除率低下", "反覆細菌培養陽性", "排除免疫缺陷"]
        },
        {
          "step": 4,
          "action": "電子顯微鏡確診",
          "details": "呼吸道黏膜切片電子顯微鏡檢查纖毛超微結構異常",
          "findings": ["纖毛動力臂缺失（最常見）", "纖毛微管排列異常", "纖毛完全缺失", "基因檢測（部分品種可用）"]
        }
      ]
    }
  },
  "hypoplastic-trachea": {
    "diagnosticAlgorithm": {
      "title": "氣管發育不全 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估短頭犬種幼犬的慢性呼吸困難、喘鳴聲、反覆呼吸道感染",
          "findings": ["慢性呼吸困難", "喘鳴聲或鼾聲", "反覆呼吸道感染", "運動不耐受"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "聽診上下呼吸道，評估是否合併其他短頭犬呼吸道症候群",
          "findings": ["吸氣性及呼氣性呼吸雜音", "氣管直徑觸診偏小", "可能有軟顎過長、鼻孔狹窄", "發紺"]
        },
        {
          "step": 3,
          "action": "影像學確診",
          "details": "胸部X光側位片測量氣管直徑與胸廓入口比",
          "findings": ["氣管直徑/胸廓入口比值降低", "氣管全長均勻偏小", "氣管環重疊（C形軟骨環閉合）", "區別氣管塌陷"]
        },
        {
          "step": 4,
          "action": "合併症評估與管理",
          "details": "評估合併的短頭犬呼吸道症候群及先天性心臟病",
          "findings": ["合併先天性心臟缺陷評估", "短頭犬呼吸道症候群其他組成", "感染控制", "預後評估"]
        }
      ]
    }
  },
  "mammary-gland-hyperplasia": {
    "diagnosticAlgorithm": {
      "title": "乳腺增生 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察年輕母貓（最常見）的快速乳腺腫大，詢問動情週期或黃體酮藥物使用史",
          "findings": ["乳腺快速腫大", "單側或雙側多個乳腺受累", "年輕未絕育母貓好發", "可能有黃體酮藥物使用史"]
        },
        {
          "step": 2,
          "action": "理學檢查",
          "details": "觸診評估所有乳腺腫大程度、質地，排除腫瘤性病變",
          "findings": ["乳腺均勻腫大", "質地堅實但非硬結", "多個乳腺同時受累（與腫瘤不同）", "表面可能潰瘍"]
        },
        {
          "step": 3,
          "action": "細胞學/切片",
          "details": "FNA細胞學排除乳腺腫瘤，必要時切除切片",
          "findings": ["乳腺上皮增生但無異型性", "排除乳腺腺癌", "排除乳腺纖維腺瘤", "良性增生確認"]
        },
        {
          "step": 4,
          "action": "荷爾蒙評估與治療",
          "details": "確認為黃體酮相關良性增生，規劃絕育手術",
          "findings": ["黃體酮依賴性確認", "停用外源性黃體酮", "卵巢子宮切除後消退", "aglepristone（黃體酮拮抗劑）可加速消退"]
        }
      ]
    }
  },
  "galactostasis": {
    "diagnosticAlgorithm": {
      "title": "乳汁淤積 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估哺乳期或離乳後母犬/母貓的乳腺腫脹及不適",
          "findings": ["乳腺腫脹飽滿", "觸診不適但非劇痛", "乳汁可擠出", "離乳後或仔畜減少後發生"]
        },
        {
          "step": 2,
          "action": "乳腺觸診",
          "details": "評估所有乳腺的腫脹程度、溫度、硬度，鑑別乳腺炎",
          "findings": ["乳腺均勻腫脹", "局部溫度不升高（與乳腺炎鑑別）", "乳汁外觀正常（無膿性或血性）", "全身狀態良好"]
        },
        {
          "step": 3,
          "action": "鑑別乳腺炎",
          "details": "排除細菌性乳腺炎：評估全身症狀、乳汁性質、必要時乳汁培養",
          "findings": ["無發熱", "乳汁非膿性或變色", "乳汁pH正常", "排除乳腺膿腫"]
        },
        {
          "step": 4,
          "action": "確診與管理",
          "details": "根據臨床表現確診單純乳汁淤積，制定管理方案",
          "findings": ["單純乳汁淤積確診", "減少飲水及食物量", "冷敷緩解腫脹", "監測是否繼發乳腺炎"]
        }
      ]
    }
  },
  "feline-orofacial-pain-syndrome": {
    "diagnosticAlgorithm": {
      "title": "貓口面部疼痛症候群 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察貓的口面部不適行為（過度搔抓面部、舌頭異常運動），注意好發品種（緬甸貓）",
          "findings": ["面部及口部劇烈搔抓", "舌頭異常舔舐或伸出", "過度流涎", "無法進食"]
        },
        {
          "step": 2,
          "action": "口腔及牙科檢查",
          "details": "全身麻醉下完整口腔及牙科檢查（含牙科X光），排除牙科疾病",
          "findings": ["排除牙根吸收", "排除口腔潰瘍", "排除牙周病", "排除口腔腫瘤"]
        },
        {
          "step": 3,
          "action": "神經學檢查",
          "details": "完整神經學檢查，特別是三叉神經功能評估，排除結構性神經病變",
          "findings": ["三叉神經功能評估", "排除中耳疾病", "排除腦部病變（MRI）", "排除其他神經痛"]
        },
        {
          "step": 4,
          "action": "排除診斷確認",
          "details": "排除所有可識別的口腔及神經疾病後，根據特徵性行為模式確診",
          "findings": ["所有口腔疾病已排除", "神經學檢查正常", "特徵性口面部疼痛行為", "品種傾向（緬甸貓）支持診斷"]
        }
      ]
    }
  },
  "eosinophilic-stomatitis": {
    "diagnosticAlgorithm": {
      "title": "嗜酸性口炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察口腔黏膜增生性或潰瘍性病變，評估進食困難程度",
          "findings": ["口腔黏膜白色或粉紅色增生病變", "舌頭或口腔潰瘍", "進食困難", "流涎"]
        },
        {
          "step": 2,
          "action": "口腔檢查",
          "details": "鎮靜下完整口腔檢查，記錄病變分布及型態",
          "findings": ["唇部嗜酸性肉芽腫", "硬顎或舌頭潰瘍", "病變邊緣隆起", "可能合併嗜酸性肉芽腫複合體"]
        },
        {
          "step": 3,
          "action": "切片與細胞學",
          "details": "病變切片送病理學，確認嗜酸性浸潤，排除腫瘤",
          "findings": ["嗜酸性球大量浸潤", "膠原纖維變性", "排除鱗狀上皮細胞癌", "排除纖維肉瘤"]
        },
        {
          "step": 4,
          "action": "過敏原評估",
          "details": "評估潛在過敏原（食物、環境），排除其他嗜酸性球疾病",
          "findings": ["食物排除試驗", "跳蚤過敏排除", "環境過敏原評估", "嗜酸性球計數（可能升高）"]
        }
      ]
    }
  },
  "hypovolemic-shock": {
    "diagnosticAlgorithm": {
      "title": "低血容積性休克 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "快速ABC評估，識別休克代償期和失代償期的臨床表現",
          "findings": ["心搏過速", "脈搏微弱", "黏膜蒼白或灰白", "CRT延長（>2秒）"]
        },
        {
          "step": 2,
          "action": "液體喪失來源鑑定",
          "details": "區分出血性（外部/內部出血）和非出血性（嚴重脫水、第三間隙積液）原因",
          "findings": ["外傷出血", "消化道出血（嘔吐、腹瀉）", "嚴重脫水（嘔吐、腹瀉、腎病）", "大量胸腹腔積液"]
        },
        {
          "step": 3,
          "action": "急查實驗室指標",
          "details": "PCV/TP、血乳酸、血氣分析、電解質、FAST超音波",
          "findings": ["PCV及TP變化", "乳酸升高", "代謝性酸中毒", "FAST超音波見腔體積液"]
        },
        {
          "step": 4,
          "action": "輸液復甦與監測",
          "details": "快速晶體液或膠體液復甦，持續監測反應指標",
          "findings": ["輸液後心率改善", "血壓恢復", "乳酸下降", "尿量恢復"]
        }
      ]
    }
  },
  "near-drowning": {
    "diagnosticAlgorithm": {
      "title": "溺水救治 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "確認溺水史及浸泡時間，ABC評估，注意低體溫",
          "findings": ["意識狀態評估", "自主呼吸有無", "心跳節律", "低體溫"]
        },
        {
          "step": 2,
          "action": "呼吸系統評估",
          "details": "聽診肺部，評估氧合狀態，注意症狀可能延遲出現",
          "findings": ["肺部爆裂音或喘鳴音", "呼吸困難", "咳嗽及口鼻泡沫", "SpO2下降"]
        },
        {
          "step": 3,
          "action": "實驗室與影像",
          "details": "胸部X光、血氣分析、電解質（淡水vs海水溺水差異）",
          "findings": ["胸部X光：瀰漫性肺浸潤", "低氧血症", "淡水：低鈉、血液稀釋", "海水：高鈉、血液濃縮"]
        },
        {
          "step": 4,
          "action": "持續監測",
          "details": "24-48小時密切監測ARDS發展，注意二次溺水現象",
          "findings": ["肺水腫進展", "ARDS發展", "酸鹼失衡", "體溫恢復監測"]
        }
      ]
    }
  },
  "heatstroke": {
    "diagnosticAlgorithm": {
      "title": "熱衰竭/中暑 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "確認高溫暴露史，測量直腸溫度，評估意識及神經症狀",
          "findings": ["直腸溫度>41°C", "過度喘息", "黏膜磚紅色或泥灰色", "意識改變或癲癇"]
        },
        {
          "step": 2,
          "action": "多器官功能評估",
          "details": "評估心血管、腎臟、肝臟、凝血功能、消化道",
          "findings": ["心搏過速及低血壓", "少尿或無尿", "嘔吐/血便", "瘀斑（DIC前兆）"]
        },
        {
          "step": 3,
          "action": "實驗室緊急檢查",
          "details": "CBC、生化、凝血功能、血氣分析",
          "findings": ["肝酵素升高", "腎指數升高", "PT/APTT延長（DIC）", "血小板減少"]
        },
        {
          "step": 4,
          "action": "降溫與持續監測",
          "details": "積極降溫至39.5°C後停止，持續監測72小時內多器官損傷",
          "findings": ["體溫恢復正常", "DIC發展監測", "急性腎損傷監測", "神經後遺症評估"]
        }
      ]
    }
  }
}
