{
  "hypothermia": {
    "diagnosticAlgorithm": {
      "title": "低體溫症 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "測量直腸溫度（可能需低溫溫度計），評估意識及心血管狀態",
          "findings": ["直腸溫度<37°C（犬貓）", "輕度（32-37°C）：顫抖", "中度（28-32°C）：意識減退、心搏過緩", "重度（<28°C）：昏迷、心律不整"]
        },
        {
          "step": 2,
          "action": "心血管與呼吸評估",
          "details": "持續心電圖監測（低溫可致心律不整）、評估呼吸頻率及血氧",
          "findings": ["竇性心搏過緩", "心房顫動", "心室顫動風險（<28°C）", "呼吸抑制"]
        },
        {
          "step": 3,
          "action": "病因評估",
          "details": "區分環境暴露、麻醉後、新生兒、敗血症、休克等原因",
          "findings": ["環境暴露史", "術後低體溫", "新生兒/幼年動物", "敗血症或休克相關"]
        },
        {
          "step": 4,
          "action": "實驗室檢查與復溫",
          "details": "血糖、電解質（特別是鉀離子）、血氣分析，緩慢復溫",
          "findings": ["低血糖", "高鉀血症（復溫後可能轉為低鉀）", "代謝性酸中毒", "凝血功能異常"]
        }
      ]
    }
  },
  "lens-luxation": {
    "diagnosticAlgorithm": {
      "title": "水晶體脫位 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估急性眼部疼痛（前脫位）或視力改變，注意好發品種（梗犬類）",
          "findings": ["急性眼部疼痛（瞇眼、流淚）", "角膜水腫（白濁）", "瞳孔形狀異常", "虹膜震顫"]
        },
        {
          "step": 2,
          "action": "眼科檢查",
          "details": "裂隙燈檢查確認水晶體位置（前脫位/後脫位/半脫位）、測量眼壓",
          "findings": ["前脫位：水晶體在瞳孔前方（前房內）", "後脫位：水晶體在玻璃體腔", "半脫位：懸韌帶部分斷裂", "眼壓升高（繼發青光眼）"]
        },
        {
          "step": 3,
          "action": "對側眼評估",
          "details": "仔細檢查對側眼是否有早期脫位徵象（雙側好發）",
          "findings": ["對側眼懸韌帶鬆弛", "虹膜震顫", "玻璃體疝出到前房", "預防性監測"]
        },
        {
          "step": 4,
          "action": "確診與急救處理",
          "details": "確認脫位類型及眼壓狀態，前脫位為眼科急症需緊急手術",
          "findings": ["前脫位需緊急手術（摘除水晶體）", "後脫位可保守管理但需監測", "繼發青光眼需立即降眼壓", "評估視力保留可能性"]
        }
      ]
    }
  },
  "nuclear-sclerosis": {
    "diagnosticAlgorithm": {
      "title": "核性硬化 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "飼主發現老年動物眼球灰藍色混濁，但視力通常未受影響",
          "findings": ["雙側眼球灰藍色混濁", "視力正常", "老年動物（犬>6歲）", "飼主擔心白內障"]
        },
        {
          "step": 2,
          "action": "眼科檢查",
          "details": "裂隙燈檢查區分核性硬化與白內障（關鍵鑑別）",
          "findings": ["透過散瞳可見眼底反射存在（核性硬化）", "白內障阻擋眼底反射", "水晶體中心硬化但不混濁", "不影響光線通過"]
        },
        {
          "step": 3,
          "action": "視力評估",
          "details": "威脅反應、棉球落下測試、障礙物迷宮測試確認視力正常",
          "findings": ["威脅反應正常", "追蹤移動物體正常", "障礙物避讓正常", "瞳孔對光反射正常"]
        },
        {
          "step": 4,
          "action": "確診與衛教",
          "details": "確認為年齡相關的核性硬化（非病理性），向飼主解釋與白內障的區別",
          "findings": ["核性硬化確診（正常老化現象）", "不需要治療", "與白內障明確區分", "定期追蹤眼科檢查"]
        }
      ]
    }
  },
  "keratitis": {
    "diagnosticAlgorithm": {
      "title": "角膜炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估眼部不適（瞇眼、流淚、畏光）、角膜混濁或新生血管",
          "findings": ["瞇眼及眼睛疼痛", "過度流淚", "角膜混濁", "角膜新生血管"]
        },
        {
          "step": 2,
          "action": "眼科基本檢查",
          "details": "裂隙燈評估角膜各層病變深度，螢光素染色排除潰瘍",
          "findings": ["角膜水腫（基質層病變）", "角膜色素沉著", "角膜脂質沉積", "螢光素染色陽性/陰性"]
        },
        {
          "step": 3,
          "action": "病因鑑別",
          "details": "淚液測試（STT）排除乾眼症，細菌/真菌培養，FHV-1檢測（貓）",
          "findings": ["STT降低（KCS相關角膜炎）", "細菌培養（感染性角膜炎）", "FHV-1 PCR（貓疱疹病毒）", "免疫媒介性角膜炎（慢性表淺性角膜炎）"]
        },
        {
          "step": 4,
          "action": "確診分型",
          "details": "根據病因及角膜病變特徵確定角膜炎類型",
          "findings": ["感染性角膜炎（細菌/真菌/病毒）", "免疫媒介性角膜炎（德牧pannus）", "乾燥性角膜炎（KCS相關）", "色素性角膜炎（短頭犬）"]
        }
      ]
    }
  },
  "dry-socket-alveolar-osteitis": {
    "diagnosticAlgorithm": {
      "title": "乾性齒槽炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "拔牙後2-5天出現劇烈疼痛，詢問拔牙史及術後護理",
          "findings": ["拔牙後持續或加劇的疼痛", "口臭", "進食困難", "拔牙窩內血凝塊缺失"]
        },
        {
          "step": 2,
          "action": "口腔檢查",
          "details": "直接觀察拔牙窩，評估血凝塊狀態及周圍組織",
          "findings": ["拔牙窩內血凝塊缺失或溶解", "齒槽骨暴露可見", "周圍組織發炎", "可能有食物殘渣嵌入"]
        },
        {
          "step": 3,
          "action": "影像學排除",
          "details": "牙科X光排除殘留牙根碎片或齒槽骨骨折",
          "findings": ["排除殘留牙根碎片", "排除齒槽骨骨折", "排除骨質壞死", "評估癒合進展"]
        },
        {
          "step": 4,
          "action": "確診與處理",
          "details": "根據拔牙後疼痛加劇及血凝塊缺失的臨床表現確診",
          "findings": ["乾性齒槽炎確診", "溫和沖洗及填塞", "疼痛管理", "二次意向癒合監測"]
        }
      ]
    }
  },
  "gingival-hyperplasia": {
    "diagnosticAlgorithm": {
      "title": "牙齦增生 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "觀察牙齦組織增生覆蓋牙冠，詢問用藥史（環孢素、鈣通道阻斷劑）",
          "findings": ["牙齦組織增生覆蓋牙冠", "進食困難或出血", "口臭", "藥物使用史"]
        },
        {
          "step": 2,
          "action": "口腔檢查",
          "details": "評估增生範圍、質地（堅實vs鬆軟）、有無假性牙周囊袋形成",
          "findings": ["廣泛性牙齦增生", "假性牙周囊袋", "食物殘渣堆積於假性囊袋", "繼發性牙周病"]
        },
        {
          "step": 3,
          "action": "切片排除腫瘤",
          "details": "組織切片排除牙齦腫瘤（齒齦瘤、纖維肉瘤、SCC）",
          "findings": ["纖維性增生（良性反應性）", "排除齒齦瘤", "排除鱗狀上皮細胞癌", "排除惡性黑色素瘤"]
        },
        {
          "step": 4,
          "action": "病因與治療決策",
          "details": "確認為增生性牙齦炎或藥物性牙齦增生，規劃牙齦切除手術",
          "findings": ["品種性牙齦增生（拳師犬好發）", "藥物性牙齦增生", "牙齦切除術規劃", "口腔衛生維護計畫"]
        }
      ]
    }
  },
  "idiopathic-cystitis": {
    "diagnosticAlgorithm": {
      "title": "特發性膀胱炎 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估下泌尿道症狀（頻尿、血尿、排尿困難），注意年輕室內貓最好發",
          "findings": ["頻尿", "血尿", "排尿困難或疼痛", "不適當排尿（在貓砂盆外）"]
        },
        {
          "step": 2,
          "action": "尿液分析",
          "details": "尿液常規分析、尿液培養排除感染性膀胱炎",
          "findings": ["血尿（紅血球）", "無顯著細菌（與感染性鑑別）", "尿液培養陰性", "可能有微量蛋白尿"]
        },
        {
          "step": 3,
          "action": "影像學排除",
          "details": "腹部X光及超音波排除尿路結石、腫瘤",
          "findings": ["排除膀胱結石", "排除尿道阻塞（公貓）", "膀胱壁增厚", "排除膀胱腫瘤"]
        },
        {
          "step": 4,
          "action": "排除診斷確認",
          "details": "排除所有可識別的下泌尿道疾病後確診為特發性膀胱炎（FIC）",
          "findings": ["排除細菌感染", "排除結石", "排除腫瘤", "特發性膀胱炎確診（排除診斷）"]
        }
      ]
    }
  },
  "uroabdomen": {
    "diagnosticAlgorithm": {
      "title": "腹腔尿液積聚 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "緊急評估",
          "details": "評估外傷史或泌尿道手術史，注意腹部膨脹、無法排尿、休克徵象",
          "findings": ["腹部膨脹", "無法排尿或尿量減少", "精神沉鬱、嘔吐", "氮血症及高鉀血症"]
        },
        {
          "step": 2,
          "action": "實驗室緊急檢查",
          "details": "血液生化（BUN、肌酐、鉀離子嚴重升高）、腹腔穿刺液分析",
          "findings": ["高鉀血症（心律不整風險）", "BUN/肌酐嚴重升高", "代謝性酸中毒", "腹腔穿刺液肌酐>血清肌酐"]
        },
        {
          "step": 3,
          "action": "影像學定位",
          "details": "腹部超音波確認腹腔積液，注射對比劑或螢光素定位滲漏部位",
          "findings": ["腹腔游離液體", "膀胱壁不連續（破裂）", "腎臟或輸尿管損傷", "對比劑外漏確認部位"]
        },
        {
          "step": 4,
          "action": "穩定化與手術規劃",
          "details": "先穩定高鉀血症及氮血症（腹腔引流+靜脈輸液），再行手術修補",
          "findings": ["腹腔引流降低腹壓及毒素吸收", "高鉀血症處理（鈣劑、胰島素-葡萄糖）", "確定滲漏部位（膀胱/尿道/輸尿管/腎臟）", "手術修補時機"]
        }
      ]
    }
  },
  "hypophosphatemia": {
    "diagnosticAlgorithm": {
      "title": "低磷血症 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估虛弱、溶血性貧血、橫紋肌溶解等與低磷相關的臨床症狀",
          "findings": ["虛弱無力", "溶血性貧血", "呼吸困難", "進食恢復後症狀出現（再餵食症候群）"]
        },
        {
          "step": 2,
          "action": "血清磷濃度測定",
          "details": "急查血清磷，評估低磷嚴重度",
          "findings": ["血清磷<2.5mg/dL（輕度低磷）", "血清磷<1.5mg/dL（嚴重低磷）", "磷<1.0mg/dL可致命", "同時檢查鈣、鉀、鎂"]
        },
        {
          "step": 3,
          "action": "病因鑑別",
          "details": "區分細胞內轉移（最常見）、腎臟流失、攝入不足三大類原因",
          "findings": ["再餵食症候群（飢餓後恢復餵食）", "糖尿病酮酸中毒胰島素治療後", "高鈣血症相關", "長期厭食或營養不良"]
        },
        {
          "step": 4,
          "action": "併發症評估",
          "details": "評估低磷導致的器官損傷程度",
          "findings": ["溶血性貧血（PCV下降）", "橫紋肌溶解（CK升高）", "呼吸肌無力", "心肌功能障礙"]
        }
      ]
    }
  },
  "hyperosmolar-syndrome": {
    "diagnosticAlgorithm": {
      "title": "高滲透壓症候群 診斷流程",
      "steps": [
        {
          "step": 1,
          "action": "初步評估",
          "details": "評估嚴重脫水、神經症狀、已知糖尿病史，注意貓比犬常見",
          "findings": ["嚴重脫水（皮膚帳篷延長）", "嗜睡或昏迷", "已知或新診斷糖尿病", "多飲多尿病史"]
        },
        {
          "step": 2,
          "action": "血糖與滲透壓測定",
          "details": "急查血糖（極度升高）、計算或測定血漿滲透壓",
          "findings": ["血糖>600mg/dL", "血漿滲透壓>340mOsm/kg", "無或輕微酮體（與DKA鑑別）", "嚴重高鈉血症"]
        },
        {
          "step": 3,
          "action": "完整實驗室評估",
          "details": "CBC、完整生化、尿液分析、血氣分析",
          "findings": ["氮血症（腎前性或腎性）", "電解質嚴重異常", "無顯著代謝性酸中毒（與DKA鑑別）", "尿液高比重及糖尿"]
        },
        {
          "step": 4,
          "action": "確診與謹慎治療",
          "details": "根據極度高血糖、高滲透壓、無顯著酮酸中毒確診HHS，需極緩慢矯正",
          "findings": ["確診高滲透壓高血糖狀態", "緩慢降低滲透壓（避免腦水腫）", "低劑量胰島素治療", "監測神經狀態變化"]
        }
      ]
    }
  }
}
